---
// src/pages/termsandconditions.astro
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/Footer.astro";
import '../styles/css/global.css';

const currentPath = Astro.url.pathname;
const pageTitle = "Terms and Conditions | MSU-TCTO";
---

<Layout title={pageTitle}>
    <main class="min-h-screen flex flex-col">
        <Navbar path={currentPath} client:visible />

        <!-- Hero Section -->
        <section class="relative bg-gradient-to-br from-msu-deep-ocean via-msu-main-color to-msu-deep-ocean py-20 md:py-32 overflow-hidden">
            <!-- Enhanced Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-0 left-0 w-72 h-72 bg-msu-gold rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
                <div class="absolute top-0 right-0 w-72 h-72 bg-msu-main-color rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-2000"></div>
                <div class="absolute -bottom-8 left-20 w-72 h-72 bg-msu-gold rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-4000"></div>
            </div>
            
            <div class="relative z-10 container mx-auto px-4 xl:px-[12.5%] xs:px-[5%] text-center">
                <div class="max-w-4xl mx-auto">
                    <!-- Enhanced Icon with Animation -->
                    <div class="mb-8 flex justify-center">
                        <div class="bg-white/10 backdrop-blur-sm rounded-full p-6 border border-white/20 relative group hover:scale-110 transition-transform duration-300">
                            <div class="absolute inset-0 bg-gradient-to-r from-msu-gold/20 to-transparent rounded-full animate-pulse"></div>
                            <svg class="w-16 h-16 text-white relative z-10 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                    </div>
                    
                    <h1 class="headings xl:h2 xs:h3 text-white font-bold mb-6 leading-tight">
                        Terms and Conditions
                    </h1>
                    <p class="paragraph xl:p1 xs:p2 text-white/90 max-w-2xl mx-auto leading-relaxed">
                        Please read these terms and conditions carefully before using our website and services. 
                        By accessing or using our website, you agree to be bound by these terms.
                    </p>
                    
                    <!-- Enhanced Last Updated Badge -->
                    <div class="mt-8 inline-flex items-center bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 border border-white/20 group hover:bg-white/20 transition-all duration-300 hover:scale-105">
                        <div class="relative">
                            <svg class="w-5 h-5 text-white mr-2 animate-spin-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <span class="text-white text-sm font-medium">Last Updated: December 2024</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content Section -->
        <section class="bg-white py-16 md:py-24">
            <div class="container mx-auto px-4 xl:px-[12.5%] xs:px-[5%]">
                <div class="max-w-4xl mx-auto">
                    
                    <!-- Enhanced Table of Contents -->
                    <div class="mb-12 bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-8 border border-gray-200 shadow-lg hover:shadow-xl transition-shadow duration-300">
                        <div class="flex items-center mb-6">
                            <div class="bg-msu-deep-ocean text-white rounded-full p-3 mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                            </div>
                            <h2 class="headings xl:h4 xs:h5 text-msu-deep-ocean font-bold">Table of Contents</h2>
                        </div>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="space-y-4">
                                <a href="#acceptance" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">
                                    <span class="w-3 h-3 bg-msu-main-color rounded-full mr-4 group-hover:scale-150 transition-transform duration-200"></span>
                                    <span class="text-sm font-medium">1. Acceptance of Terms</span>
                                </a>
                                <a href="#use-of-website" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">
                                    <span class="w-3 h-3 bg-msu-main-color rounded-full mr-4 group-hover:scale-150 transition-transform duration-200"></span>
                                    <span class="text-sm font-medium">2. Use of Website</span>
                                </a>
                                <a href="#intellectual-property" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">
                                    <span class="w-3 h-3 bg-msu-main-color rounded-full mr-4 group-hover:scale-150 transition-transform duration-200"></span>
                                    <span class="text-sm font-medium">3. Intellectual Property</span>
                                </a>
                                <a href="#user-conduct" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">
                                    <span class="w-3 h-3 bg-msu-main-color rounded-full mr-4 group-hover:scale-150 transition-transform duration-200"></span>
                                    <span class="text-sm font-medium">4. User Conduct</span>
                                </a>
                            </div>
                            <div class="space-y-4">
                                <a href="#disclaimer" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">
                                    <span class="w-3 h-3 bg-msu-main-color rounded-full mr-4 group-hover:scale-150 transition-transform duration-200"></span>
                                    <span class="text-sm font-medium">5. Disclaimer</span>
                                </a>
                                <a href="#limitation-liability" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">
                                    <span class="w-3 h-3 bg-msu-main-color rounded-full mr-4 group-hover:scale-150 transition-transform duration-200"></span>
                                    <span class="text-sm font-medium">6. Limitation of Liability</span>
                                </a>
                                <a href="#termination" class="flex items-center p-3 rounded-lg text-gray-700 hover:text-msu-main-color hover:bg-white transition-all duration-200 group shadow-sm hover:shadow-md">

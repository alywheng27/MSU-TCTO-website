---
import Layout from '../layouts/introloader.astro';
import CoedNavbar from "../components/CoedNavbar";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/iciiefooter.astro";
import '../styles/css/global.css';
import '../styles/css/globalanimate.css';

const currentPath = Astro.url.pathname;
---

<Layout title="ICIIE 2025 - 1st International Conference on Inclusive and Indigenous Education | MSU-TCTO">
	<main class="font-sans dark:bg-gray-900 transition-colors duration-300">
		<!-- Banner Image Section -->
		<section class="relative w-full aspect-[4.5/1] overflow-hidden">
			<img 
				src="/images/samplebanner.jpg" 
				alt="ICIIE 2025 Banner"
				class="w-full h-full object-cover"
				loading="lazy"
			/>
		</section>
		
		<CoedNavbar path={currentPath} client:visible />

		<!-- Hero Section -->
		<section class="relative bg-gradient-to-br from-[#FFFFFF] via-[#F8FAFC] to-[#E2E8F0] dark:bg-gradient-to-br dark:from-gray-900 dark:via-gray-800 dark:to-gray-700 min-h-screen flex items-center overflow-hidden">
			<!-- Background Image -->
			<div class="absolute inset-0">
				<img 
					src="/images/coed/aerialbg.png" 
					alt="College of Education Background"
					class="w-full h-full object-cover opacity-20 sm:opacity-30"
					loading="lazy"
				/>
			</div>	
			<div class="container mx-auto px-4 sm:px-6 relative z-10">
				<div class="max-w-6xl mx-auto text-center">
					<!-- Conference Badge -->
					<div class="inline-flex items-center bg-[#0077B6]/20 backdrop-blur-md border border-[#0077B6]/30 rounded-full px-4 sm:px-6 py-2 sm:py-3 mb-6 sm:mb-8 shadow-lg shadow-[#0077B6]/20">
						<div class="w-2 h-2 sm:w-3 sm:h-3 bg-[#0077B6] rounded-full mr-2 sm:mr-3"></div>
						<span class="text-[#0077B6] dark:text-white font-medium tracking-wide text-sm sm:text-base">November 26-28, 2025</span>
					</div>

					<!-- Welcome Message -->
					<h2 class="text-lg sm:text-xl md:text-2xl mb-3 sm:mb-4" style="font-family: 'BebasNeue-Book', Arial, sans-serif; color: #0077B6;">Welcome to the</h2>
					
					<!-- Main Title (Styled to match provided image exactly) -->
					<h1 class="mb-4 sm:mb-6 leading-tight text-center" style="font-family: 'BebasNeue-Book', Arial, sans-serif;">
						<!-- First line: "1ST INTERNATIONAL CONFERENCE" in maroon -->
						<span class="block text-3xl xs:text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl 2xl:text-9xl font-normal tracking-tight text-[#61063B] dark:text-white" style="font-family: 'Bebas Neue', Arial, sans-serif;">
							1<sup class="align-super text-xs sm:text-sm md:text-base lg:text-lg xl:text-xl 1xl:text-1xl font-normal" style="font-family: 'Bebas Neue', Arial, sans-serif;">ST</sup>
							<span class="ml-1 text-4xl xs:text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl 2xl:text-[10rem] font-normal" style="font-family: 'Bebas Neue', Arial, sans-serif;">INTERNATIONAL CONFERENCE</span>
						</span>
						<!-- Second line: "ON INCLUSIVE AND" in blue -->
						<span class="block mt-1 text-4xl xs:text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl 2xl:text-[10rem] font-bold tracking-wider text-[#0077B6] dark:text-[#0077B6]" style="font-family: 'BebasNeue-Book', Arial, sans-serif;">
							<span style="font-family: 'Bebas Neue Thin Regular', Arial, sans-serif; font-weight: 400;">ON</span> <span class="font-bold" style="font-family: 'BebasNeue-Book', Arial, sans-serif;">INCLUSIVE</span> <span style="font-family: 'Bebas Neue Thin Regular', Arial, sans-serif; font-weight: 400;">AND</span>
						</span>
						<!-- Third line: "INDIGENOUS EDUCATION" in blue (largest) -->
						<span class="block text-4xl xs:text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl 2xl:text-[10rem] font-bold tracking-wider text-[#0077B6] dark:text-[#0077B6]" style="font-family: 'BebasNeue-Book', Arial, sans-serif;">
							INDIGENOUS EDUCATION
						</span>
					</h1>

					<!-- Theme -->
					<div class="mb-8 sm:mb-12">
						<p class="text-lg sm:text-xl md:text-2xl text-[#0077B6] dark:text-[#0077B6] font-semibold mb-2" style="font-family: 'BebasNeue-Bold', Bebas Neue, Arial, sans-serif;">Theme:</p>
						<p class="text-base sm:text-lg md:text-xl text-[#0077B6] dark:text-gray-300 max-w-4xl mx-auto leading-relaxed italic px-4" style="font-family: 'BebasNeue-Bold', Bebas Neue, Arial, sans-serif;">
							"Reimagining Education Leadership and Policy for Equity and Social Inclusion"
						</p>
					</div>

					<!-- Location -->
					<div class="mb-8 sm:mb-12">
						<p class="text-sm sm:text-base md:text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto text-center leading-relaxed px-4">
							<span class="font-semibold block text-[#61063B] dark:text-[#61063B]">Mindanao State University Tawi-Tawi College of Technology and Oceanography</span>
							<span class="block text-[#61063B]">Sanga-Sanga, Bongao, Tawi-Tawi 7500, Philippines</span>
						</p>
					</div>

					<!-- Call to Action Buttons -->
					<div class="flex flex-col sm:flex-row flex-wrap justify-center gap-4 sm:gap-6 mb-12 sm:mb-16 px-4">
						<a 
							href="#registration"
							class="group bg-[#0077B6] hover:from-[#61063B] hover:to-[#61063B] hover:text-[#61063B] text-white font-bold py-3 sm:py-4 px-6 sm:px-8 rounded-full transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl flex items-center justify-center border border-[#0077B6]/20 w-full sm:w-auto"
						>
							<span class="text-sm sm:text-base">Register Now</span>
							<svg class="w-4 h-4 sm:w-5 sm:h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
							</svg>
						</a>
						<a 
							href="#call-for-abstracts"
							class="group bg-transparent border-2 border-[#0077B6] hover:bg-gradient-to-r hover:from-[#0077B6] hover:to-[#61063B] hover:text-white text-[#0077B6] dark:text-[#90cdf4] font-bold py-3 sm:py-4 px-6 sm:px-8 rounded-full transition-all duration-300 transform hover:-translate-y-1 flex items-center justify-center backdrop-blur-sm w-full sm:w-auto"
						>
							<svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
							</svg>
							<span class="text-sm sm:text-base">Submit Abstract</span>
						</a>
						<a 
							href="#speakers"
							class="group bg-[#0077B6] hover:from-[#4a0a2e] hover:to-[#005a8a] text-white hover:text-[#61063B] font-bold py-3 sm:py-4 px-6 sm:px-8 rounded-full transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl flex items-center justify-center border border-[#61063B]/20 w-full sm:w-auto"
						>
							<span class="text-sm sm:text-base">Speakers</span>
							<svg class="w-4 h-4 sm:w-5 sm:h-5 ml-2 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
							</svg>
						</a>
					</div>
				</div>
			</div>
			
			<!-- Scroll Indicator -->
			<div class="absolute bottom-4 sm:bottom-8 left-1/2 transform -translate-x-1/2">
				<div class="animate-bounce cursor-pointer bg-gradient-to-r from-[#0077B6]/20 to-[#61063B]/20 dark:from-[#0077B6]/30 dark:to-[#61063B]/30 backdrop-blur-md border border-[#0077B6]/30 dark:border-[#0077B6]/50 rounded-full p-2 sm:p-3 hover:from-[#0077B6]/30 hover:to-[#61063B]/30 dark:hover:from-[#0077B6]/40 dark:hover:to-[#61063B]/40 transition-all duration-300 shadow-lg shadow-[#0077B6]/20" onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth'})">
					<svg class="w-4 h-4 sm:w-6 sm:h-6 text-[#0077B6] dark:text-[#90cdf4] hover:text-[#61063B] dark:hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
					</svg>
				</div>
			</div>
		</section>

		<!-- About ICIIE Section -->
		<section id="about" class="py-12 sm:py-16 md:py-20 bg-gradient-to-br from-[#F8FAFC] via-[#FFFFFF] to-[#E2E8F0] dark:bg-gradient-to-br dark:from-gray-800 dark:via-gray-900 dark:to-gray-700">
			<div class="container mx-auto px-4 sm:px-6">
				<div class="max-w-6xl mx-auto">
					<div class="text-center mb-12 sm:mb-16">
						<div class="inline-flex items-center bg-gradient-to-r from-[#0077B6]/20 to-[#61063B]/20 dark:from-[#0077B6]/30 dark:to-[#61063B]/30 backdrop-blur-md border border-[#0077B6]/30 dark:border-[#0077B6]/50 rounded-full px-4 sm:px-6 py-2 sm:py-3 mb-4 sm:mb-6 shadow-lg shadow-[#0077B6]/20">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 text-[#0077B6] dark:text-[#90cdf4] mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							<span class="text-[#0077B6] dark:text-[#90cdf4] font-bold uppercase tracking-wide text-sm sm:text-base">About the Conference</span>
							</div>
						<h2 class="text-3xl sm:text-4xl md:text-5xl font-black text-[#61063B] dark:text-white mb-4 sm:mb-6">About ICIIE</h2>
						<div class="w-16 sm:w-24 h-1 bg-gradient-to-r from-[#0077B6] to-[#61063B] mx-auto mb-6 sm:mb-8"></div>
						</div>

					<div class="grid lg:grid-cols-2 gap-8 sm:gap-12 items-center mb-12 sm:mb-16">
						<div>
							<p class="text-base sm:text-lg text-[#0077B6] dark:text-white mb-4 sm:mb-6 leading-relaxed">
								The International Conference on Inclusive and Indigenous Education (ICIIE) provides a global space for dialogue on educational practices that embrace diversity and cultural identity. It highlights the role of indigenous knowledge and inclusive approaches in shaping just and equitable learning communities.
							</p>
							<p class="text-base sm:text-lg text-[#0077B6] dark:text-white mb-4 sm:mb-6 leading-relaxed">
								The College of Education (CoEd) of the Mindanao State University – Tawi-Tawi College of Technology and Oceanography (MSU-TCTO) will launch the 1st ICIIE this 2025 with the theme, <em>"Reimagining Education Leadership and Policy for Equity and Social Inclusion."</em>
							</p>
						</div>
						<div class="relative">
							<div class="bg-gradient-to-br from-[#0077B6] to-[#61063B] rounded-2xl p-6 sm:p-8 text-white">
								<div class="flex items-center mb-4">
									<div class="w-10 h-10 sm:w-12 sm:h-12 bg-white/20 rounded-full flex items-center justify-center mr-3 sm:mr-4">
										<svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
								</svg>
							</div>
									<h3 class="text-lg sm:text-xl font-bold">MSU-TCTO CoEd</h3>
						</div>
								<p class="text-white/90 text-sm sm:text-base">
									Hosted by the College of Education at MSU-TCTO, bringing together global expertise in inclusive and indigenous education.
								</p>
							</div>
						</div>
					</div>

					<!-- Conference Objectives -->
					<div class="bg-[#0077B6]/5 dark:bg-[#0077B6]/10 rounded-3xl p-6 sm:p-8 md:p-12">
						<h3 class="text-2xl sm:text-3xl font-bold text-[#61063B] dark:text-white text-center mb-8 sm:mb-12">Conference Objectives</h3>
						<div class="grid md:grid-cols-2 gap-6 sm:gap-8">
							<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-4 sm:p-6 shadow-lg border border-[#0077B6]/20 dark:border-[#0077B6]/30">
								<div class="flex items-start">
									<div class="flex-shrink-0 w-6 h-6 sm:w-8 sm:h-8 bg-[#0077B6] text-white rounded-full flex items-center justify-center font-bold text-xs sm:text-sm mr-3 sm:mr-4 mt-1">
										1
								</div>
									<p class="text-[#61063B] dark:text-white text-sm sm:text-base">
										Share research and innovations that advance inclusive education leadership, policy reforms, and practices responsive to the needs of marginalized communities
									</p>
							</div>
								</div>
							<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-4 sm:p-6 shadow-lg border border-[#61063B]/20 dark:border-[#61063B]/30">
								<div class="flex items-start">
									<div class="flex-shrink-0 w-6 h-6 sm:w-8 sm:h-8 bg-[#61063B] text-white rounded-full flex items-center justify-center font-bold text-xs sm:text-sm mr-3 sm:mr-4 mt-1">
										2
							</div>
									<p class="text-[#61063B] dark:text-white text-sm sm:text-base">
										Foster dialogue and collaboration among education leaders, educators, researchers, policymakers, and students to co-create strategies for culturally sustaining and socially just education
									</p>
								</div>
							</div>
							<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-4 sm:p-6 shadow-lg border border-[#0077B6]/20 dark:border-[#0077B6]/30">
								<div class="flex items-start">
									<div class="flex-shrink-0 w-6 h-6 sm:w-8 sm:h-8 bg-[#0077B6] text-white rounded-full flex items-center justify-center font-bold text-xs sm:text-sm mr-3 sm:mr-4 mt-1">
										3
								</div>
									<p class="text-[#61063B] dark:text-white text-sm sm:text-base">
										Develop actionable recommendations and policy directions informed by diverse cultural perspectives and evidence to transform education leadership and policy
									</p>
							</div>
						</div>
							<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-4 sm:p-6 shadow-lg border border-[#61063B]/20 dark:border-[#61063B]/30">
								<div class="flex items-start">
									<div class="flex-shrink-0 w-6 h-6 sm:w-8 sm:h-8 bg-[#61063B] text-white rounded-full flex items-center justify-center font-bold text-xs sm:text-sm mr-3 sm:mr-4 mt-1">
										4
									</div>
									<p class="text-[#61063B] dark:text-white text-sm sm:text-base">
										Serve as a platform for disseminating high-quality scholarship
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Call for Abstracts Section -->
		<section id="call-for-abstracts" class="relative py-12 sm:py-16 md:py-20 bg-gradient-to-br from-[#E2E8F0] via-[#F8FAFC] to-[#FFFFFF] dark:bg-gradient-to-br dark:from-gray-700 dark:via-gray-800 dark:to-gray-900">
			<!-- Background Elements -->
			<div class="absolute inset-0">
				<div class="absolute top-1/4 left-1/4 w-32 h-32 sm:w-64 sm:h-64 bg-[#61063B]/10 rounded-full blur-3xl animate-pulse"></div>
				<div class="absolute bottom-1/4 right-1/4 w-48 h-48 sm:w-96 sm:h-96 bg-[#0077B6]/10 rounded-full blur-3xl animate-pulse animation-delay-2000"></div>
				</div>
				
			<div class="container mx-auto px-4 sm:px-6 relative z-10">
				<div class="max-w-6xl mx-auto">
					<!-- Section Header -->
					<div class="text-center mb-12 sm:mb-16">
						<div class="inline-flex items-center bg-[#61063B]/10 dark:bg-[#61063B]/20 rounded-full px-4 sm:px-6 py-2 sm:py-3 mb-4 sm:mb-6">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 text-[#61063B] dark:text-[#61063B] mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
							</svg>
							<span class="text-[#61063B] dark:text-[#61063B] font-bold uppercase tracking-wide text-sm sm:text-base">Submit Your Research</span>
				</div>
						<h2 class="text-3xl sm:text-4xl md:text-5xl font-black text-[#61063B] dark:text-white mb-4 sm:mb-6">Call for Abstracts</h2>
						<div class="w-16 sm:w-24 h-1 bg-gradient-to-r from-[#61063B] to-[#0077B6] mx-auto mb-6 sm:mb-8"></div>
						<p class="text-base sm:text-lg md:text-xl text-[#0077B6] dark:text-[#0077B6] max-w-4xl mx-auto leading-relaxed mb-6 sm:mb-8 px-4">
							We invite scholars, researchers, educators, graduate and undergraduate students, education leaders, and policymakers to submit a 250-word abstract for an oral presentation addressing any of the following conference strands:
						</p>
			</div>

					<!-- Conference Strands -->
					<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-12 sm:mb-16">
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#61063B]/20 dark:border-[#61063B]/30">
							<div class="flex items-center mb-3 sm:mb-4">
								<div class="w-6 h-6 sm:w-8 sm:h-8 bg-[#61063B] text-white rounded-full flex items-center justify-center font-bold text-xs sm:text-sm mr-2 sm:mr-3">1</div>
								<h3 class="font-bold text-[#61063B] dark:text-white text-sm sm:text-base">Decolonizing Education Policy</h3>
								</div>
								</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#0077B6]/20 dark:border-[#0077B6]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#0077B6] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">2</div>
								<h3 class="font-bold text-[#0077B6] dark:text-[#0077B6]">Inclusive Leadership in Diverse Contexts</h3>
							</div>
						</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#61063B]/20 dark:border-[#61063B]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#61063B] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">3</div>
								<h3 class="font-bold text-[#61063B] dark:text-white">Indigenous Knowledge Systems and Pedagogies</h3>
					</div>
							</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#0077B6]/20 dark:border-[#0077B6]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#0077B6] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">4</div>
								<h3 class="font-bold text-[#0077B6] dark:text-[#0077B6]">Equity in Access, Participation, and Outcomes</h3>
						</div>
					</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#61063B]/20 dark:border-[#61063B]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#61063B] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">5</div>
								<h3 class="font-bold text-[#61063B] dark:text-white">Teacher Education and Professional Development</h3>
					</div>
				</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#0077B6]/20 dark:border-[#0077B6]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#0077B6] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">6</div>
								<h3 class="font-bold text-[#0077B6] dark:text-[#0077B6]">Language Policy and Multilingual Education</h3>
									</div>
								</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#61063B]/20 dark:border-[#61063B]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#61063B] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">7</div>
								<h3 class="font-bold text-[#61063B] dark:text-white">Community Engagement and Partnerships</h3>
								</div>
							</div>
						<div class="bg-[#FFFFFF] dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#0077B6]/20 dark:border-[#0077B6]/30">
							<div class="flex items-center mb-4">
								<div class="w-8 h-8 bg-[#0077B6] text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">8</div>
								<h3 class="font-bold text-[#0077B6] dark:text-[#0077B6]">Technology for Inclusive and Indigenous Education</h3>

---
// Imports
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import '../../styles/css/global.css';
import PageSearch from "../../components/search/PageSearch"
import SearchForm from '../../components/search/SearchForm';
import { getYear, get3LettersMonth, getDay } from '../../js/date';
import { getSearchArticleCount, getSearchArticle } from '../../api/api';

// Data Fetching
const currentPath = Astro.url.pathname;
const { search } = Astro.params;
const splitSearch = search.split('/');
const searchQuery = decodeURIComponent(splitSearch[0] || '');
const category = splitSearch[1] || 'All';
const page = splitSearch[2] || '1';

// Get search results
let maxCount = [];
let articles = [];

try {
  maxCount = await getSearchArticleCount(searchQuery, category === 'All' ? undefined : category);
  articles = await getSearchArticle(searchQuery, category === 'All' ? undefined : category, page);
} catch (error) {
  console.error('Search error:', error);
}

// Metadata
const pageTitle = searchQuery ? `"${searchQuery}" Search Results | MSU TCTO` : `Search | MSU TCTO`;
const pageDescription = searchQuery 
  ? `Find ${maxCount.length} results for ${searchQuery} at MSU Tawi-Tawi College` 
  : `Search MSU Tawi-Tawi College of Technology and Oceanography`;
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Modern White Theme -->
  <div class="min-h-screen flex flex-col bg-white">
    <Navbar path={currentPath} client:visible />

    <!-- Elegant Header -->
    <header class="bg-msu-deep-ocean from-msu-crimson-ground to-msu-deep-ocean py-16">
      <div class="container mx-auto px-6 text-center">
        <h1 class="text-4xl font-bold text-white mb-4">Search Results</h1>
        <div class="max-w-1xl mx-auto relative">
          <SearchForm search={searchQuery} />
          {searchQuery && (
            <p class="text-white/80 text-sm mt-2">
              Press <kbd class="px-2 py-1 bg-white/20 rounded text-xs">Ctrl+K</kbd> or <kbd class="px-2 py-1 bg-white/20 rounded text-xs">Cmd+K</kbd> to search from anywhere
            </p>
          )}
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-6 py-12">
      <!-- Results Summary -->
      <div class="flex justify-between items-center mb-8 border-b pb-6">
        <p class="text-gray-600">
          {searchQuery ? (
            <>
              Showing <span class="font-semibold text-msu-crimson-ground">{maxCount.length}</span> results for 
              <span class="font-semibold">"{searchQuery}"</span>
            </>
          ) : (
            <span class="text-gray-500">Enter a search term to find content</span>
          )}
        </p>
        
        <!-- Category Filters -->
        <div class="flex space-x-2">
          {searchQuery && (
            <>
              <a 
                href={`/search/${encodeURIComponent(searchQuery)}/All`} 
                class={`px-4 py-2 rounded-full text-sm font-medium ${category === 'All' || !category ? 'bg-msu-crimson-ground text-white' : 'bg-gray-100 hover:bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600'}`}
              >
                All
              </a>
              <a 
                href={`/search/${encodeURIComponent(searchQuery)}/Events`} 
                class={`px-4 py-2 rounded-full text-sm font-medium ${category === "Events" ? 'bg-msu-crimson-ground text-white' : 'bg-gray-100 hover:bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600'}`}
              >
                Events
              </a>
              <a 
                href={`/search/${encodeURIComponent(searchQuery)}/News`} 
                class={`px-4 py-2 rounded-full text-sm font-medium ${category === "News" ? 'bg-msu-crimson-ground text-white' : 'bg-gray-100 hover:bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600'}`}
              >
                News
              </a>
              <a 
                href={`/search/${encodeURIComponent(searchQuery)}/Academics`} 
                class={`px-4 py-2 rounded-full text-sm font-medium ${category === "Academics" ? 'bg-msu-crimson-ground text-white' : 'bg-gray-100 hover:bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600'}`}
              >
                Academics
              </a>
            </>
          )}
        </div>
      </div>

      <!-- Search Results -->
      {articles.length > 0 ? (
        <div class="space-y-8">
          {articles.map((article) => (
            <article key={article._id} class="p-6 rounded-lg border border-gray-100 hover:shadow-md transition-shadow">
              <div class="flex flex-col md:flex-row gap-6">
                {article.image && (
                  <div class="md:w-1/4">
                    <img 
                      src={article.image} 
                      alt={article.title} 
                      class="w-full h-48 object-cover rounded-lg"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class={`${article.image ? 'md:w-3/4' : 'w-full'}`}>
                  <a href={`/${article.slug.current}`}>
                    <h2 class="text-2xl font-bold text-gray-800 hover:text-msu-crimson-ground mb-2">
                      {article.title}
                    </h2>
                  </a>
                  <p class="text-gray-600 mb-4 line-clamp-2">
                    {article.body[0].children[0].text}
                  </p>
                  <div class="flex flex-wrap items-center gap-4 text-sm">
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full">
                      {article.category.category}
                    </span>
                    <span class="text-gray-500">
                      {getYear(article.publishedAt)} {get3LettersMonth(article.publishedAt)} {getDay(article.publishedAt)}
                    </span>
                    <a 
                      href={`/${article.slug.current}`} 
                      class="ml-auto text-msu-crimson-ground font-medium hover:underline flex items-center"
                    >
                      Read more
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <!-- No Results State -->
        <div class="text-center py-16">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mx-auto text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h2 class="text-2xl font-bold text-gray-700 mt-6 mb-2">No results found</h2>
          <p class="text-gray-500 max-w-md mx-auto mb-8">
            {searchQuery 
              ? `We couldn't find any matches for "${searchQuery}". Try different keywords or check the suggestions below.`
              : 'Start typing to search for articles, programs, faculty, and more.'
            }
          </p>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="/news" class="px-6 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-full font-medium transition-colors">
              Latest News
            </a>
            <a href="/events" class="px-6 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-full font-medium transition-colors">
              Upcoming Events
            </a>
            <a href="/academics" class="px-6 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-full font-medium transition-colors">
              Academic Programs
            </a>
          </div>
        </div>
      )}

      <!-- Pagination -->
      {articles.length > 0 && (
        <div class="mt-12">
          <PageSearch articles={articles} search={search} maxCount={maxCount.length} />
        </div>
      )}
    </main>

    <!-- Footer -->
    <FooterNav />
    <Footer />
  </div>
</Layout>

<style is:global>
    /* Custom scrollbar for modern browsers */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  ::-webkit-scrollbar-thumb {
    background: #61063b ; /* MSU crimson */
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #61063b ;
  }

  /* Smooth transitions */
  a, button {
    transition: all 0.2s ease;
  }

  /* Focus styles for accessibility */
  a:focus, button:focus {
    outline: 2px solid #8b0000;
    outline-offset: 2px;
  }
</style>
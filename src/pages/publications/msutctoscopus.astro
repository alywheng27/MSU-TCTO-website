                    this.currentPage--;
                    const query = this.buildQuery();
                    this.fetchData(query, (this.currentPage - 1) * this.resultsPerPage, this.resultsPerPage);
                }
                
                if (target.id === 'nextPage' && this.currentPage < Math.ceil(this.totalResults / this.resultsPerPage)) {
                    this.currentPage++;
                    const query = this.buildQuery();
                    this.fetchData(query, (this.currentPage - 1) * this.resultsPerPage, this.resultsPerPage);
                }
            });

            // Enter key in search
            const searchKeywordsElement = document.getElementById('searchKeywords');
            if (searchKeywordsElement) {
                searchKeywordsElement.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.currentPage = 1;
                        const query = this.buildQuery();
                        this.fetchData(query, 0, this.resultsPerPage);
                    }
                });
            }
        }
    }

    // Initialize Scopus API when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
        const scopusAPI = new ScopusAPI();
        
        // Debug functionality
        const testApiButton = document.getElementById('testApiButton');
        const apiStatus = document.getElementById('apiStatus');
        const apiTestResult = document.getElementById('apiTestResult');
        
        if (testApiButton && apiStatus && apiTestResult) {
            // Update API status
            if (scopusAPI.totalResults > 0) {
                apiStatus.textContent = 'Connected';
                apiStatus.className = 'ml-2 px-2 py-1 rounded text-xs bg-green-100 text-green-800';
            } else {
                apiStatus.textContent = 'Failed';
                apiStatus.className = 'ml-2 px-2 py-1 rounded text-xs bg-red-100 text-red-800';
            }
            
            // Test API button
            testApiButton.addEventListener('click', async () => {
                (testApiButton as HTMLButtonElement).disabled = true;
                testApiButton.textContent = 'Testing...';
                apiTestResult.innerHTML = '<span class="text-blue-600">Testing API connection...</span>';
                
                try {
                    const response = await fetch('/api/scopus-search?query=AFFIL("test")&start=0&count=1');
                    const data = await response.json();
                    
                    if (response.ok) {
                        apiTestResult.innerHTML = '<span class="text-green-600">✓ API connection successful</span>';
                        apiStatus.textContent = 'Connected';
                        apiStatus.className = 'ml-2 px-2 py-1 rounded text-xs bg-green-100 text-green-800';
                    } else {
                        apiTestResult.innerHTML = `<span class="text-red-600">✗ API Error: ${data.error || 'Unknown error'}</span>`;
                        apiStatus.textContent = 'Failed';
                        apiStatus.className = 'ml-2 px-2 py-1 rounded text-xs bg-red-100 text-red-800';
                    }
                } catch (error) {
                    apiTestResult.innerHTML = `<span class="text-red-600">✗ Connection Error: ${error.message}</span>`;
                    apiStatus.textContent = 'Failed';
                    apiStatus.className = 'ml-2 px-2 py-1 rounded text-xs bg-red-100 text-red-800';
                } finally {
                    (testApiButton as HTMLButtonElement).disabled = false;
                    testApiButton.textContent = 'Test API Connection';
                }
            });
        }
    });

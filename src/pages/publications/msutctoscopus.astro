---

<Layout 
    title={pageTitle}
>
    <main class="bg-white dark:bg-gray-900 min-h-screen">
        <Navbar path={currentPath} client:visible />

        <!-- Hero Section -->
        <section class="relative bg-gradient-to-b from-msu-main-color to-msu-dark-color py-20">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="text-center text-white">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6 font-serif">
                        Scopus Research Publications
                    </h1>
                    <p class="text-xl md:text-2xl mb-8 max-w-4xl mx-auto">
                        Discover academic contributions and scholarly work from MSU Tawi-Tawi College of Technology and Oceanography
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                        <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3">
                            <span class="text-sm font-semibold">Total Publications</span>
                            <div class="text-2xl font-bold">{totalResults.toLocaleString()}</div>
                        </div>
                        <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3">
                            <span class="text-sm font-semibold">Indexed in Scopus</span>
                            <div class="text-2xl font-bold">✓ Verified</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Search and Filter Section -->
        <section class="py-12 bg-gray-50 dark:bg-gray-800">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="bg-white dark:bg-gray-700 rounded-xl shadow-lg p-6">
                    <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Search Publications</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Search Keywords
                            </label>
                            <input 
                                type="text" 
                                id="searchKeywords"
                                placeholder="Enter keywords, author names, or titles..."
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-msu-main-color focus:border-transparent dark:bg-gray-600 dark:text-white"
                            />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Year Range
                            </label>
                            <select 
                                id="yearRange"
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-msu-main-color focus:border-transparent dark:bg-gray-600 dark:text-white"
                            >
                                <option value="">All Years</option>
                                <option value="2024">2024</option>
                                <option value="2023">2023</option>
                                <option value="2022">2022</option>
                                <option value="2021">2021</option>
                                <option value="2020">2020</option>
                                <option value="2019">2019</option>
                                <option value="2018">2018</option>
                                <option value="2017">2017</option>
                                <option value="2016">2016</option>
                                <option value="2015">2015</option>
                            </select>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Document Type
                            </label>
                            <select 
                                id="documentType"
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-msu-main-color focus:border-transparent dark:bg-gray-600 dark:text-white"
                            >
                                <option value="">All Types</option>
                                <option value="ar">Article</option>
                                <option value="re">Review</option>
                                <option value="cp">Conference Paper</option>
                                <option value="ch">Book Chapter</option>
                                <option value="bk">Book</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex flex-col sm:flex-row gap-4">
                        <button 
                            id="searchButton"
                            class="flex-1 bg-msu-main-color hover:bg-msu-dark-color text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-300 flex items-center justify-center"
                        >
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Search Publications
                        </button>
                        
                        <button 
                            id="resetButton"
                            class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-300"
                        >
                            Reset Filters
                        </button>
                        
                        <a 
                            href="https://www.sciencedirect.com/search?qs=MSU%20TCTO"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors duration-300 flex items-center justify-center"
                        >
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                            Search on ScienceDirect
                        </a>
                        
                        <a 
                            href="https://www.sciencedirect.com/search?qs=%22Mindanao%20State%20University%20Tawi-Tawi%20College%20of%20Technology%20and%20Oceanography%22"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg transition-colors duration-300 flex items-center justify-center"
                        >
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                            Full Name Search
                        </a>
                    </div>
                    
                    <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
                        <h3 class="text-lg font-semibold text-blue-800 dark:text-blue-200 mb-3">External Search Options</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="flex flex-col sm:flex-row gap-2">
                                <a 
                                    href="https://www.sciencedirect.com/search?qs=MSU%20TCTO"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors duration-300 flex items-center justify-center"
                                >
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                    </svg>
                                    Search "MSU TCTO"
                                </a>
                                <span class="text-xs text-blue-600 dark:text-blue-400 self-center">Short name search</span>
                            </div>
                            
                            <div class="flex flex-col sm:flex-row gap-2">
                                <a 
                                    href="https://www.sciencedirect.com/search?qs=%22Mindanao%20State%20University%20Tawi-Tawi%20College%20of%20Technology%20and%20Oceanography%22"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="flex-1 px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg transition-colors duration-300 flex items-center justify-center"
                                >
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                    </svg>
                                    Search Full Name
                                </a>
                                <span class="text-xs text-green-600 dark:text-green-400 self-center">Complete institution name</span>
                            </div>
                        </div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 mt-3">
                            <strong>Note:</strong> These links will open ScienceDirect in a new tab. Use "MSU TCTO" for broader results or the full name for more specific matches.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Results Section -->
        <section class="py-12 bg-white dark:bg-gray-900">
            <div class="container mx-auto px-4 max-w-7xl">
                <div id="loadingIndicator" class="hidden text-center py-12">
                    <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-msu-main-color"></div>
                    <p class="mt-4 text-gray-600 dark:text-gray-400">Loading publications...</p>
                </div>

                <div id="resultsContainer">
                    {scopusData && scopusData['search-results'] && scopusData['search-results'].entry ? (
                        <div>
                            <div class="flex justify-between items-center mb-8">
                                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                                    Research Publications ({totalResults.toLocaleString()} results)
                                </h2>
                                <div class="text-sm text-gray-600 dark:text-gray-400">
                                    Showing {scopusData['search-results'].entry.length} of {totalResults.toLocaleString()}
                                </div>
                            </div>

                            <div class="space-y-6">
                                {scopusData['search-results'].entry.map((publication, index) => (
                                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow duration-300 border border-gray-100 dark:border-gray-700">
                                        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                                            <div class="flex-1">
                                                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 hover:text-msu-main-color dark:hover:text-yellow-500 transition-colors duration-300">
                                                    <a href={publication['dc:identifier'] ? `https://www.scopus.com/record/display.uri?eid=${publication['dc:identifier'].replace('SCOPUS_ID:', '')}` : '#'} target="_blank" rel="noopener noreferrer">
                                                        {publication['dc:title'] || 'Untitled Publication'}
                                                    </a>
                                                </h3>
                                                
                                                <div class="text-gray-600 dark:text-gray-300 mb-3">
                                                    <p class="font-medium">
                                                        {publication['dc:creator'] ? publication['dc:creator'].split('; ').slice(0, 3).join(', ') : 'Unknown Author'}
                                                        {publication['dc:creator'] && publication['dc:creator'].split('; ').length > 3 && ' et al.'}
                                                    </p>
                                                </div>

                                                <div class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
                                                    {publication['prism:publicationName'] && (
                                                        <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-3 py-1 rounded-full">
                                                            {publication['prism:publicationName']}
                                                        </span>
                                                    )}
                                                    
                                                    {publication['prism:coverDate'] && (
                                                        <span class="bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-3 py-1 rounded-full">
                                                            {new Date(publication['prism:coverDate']).getFullYear()}
                                                        </span>
                                                    )}
                                                    
                                                    {publication['subtype'] && (
                                                        <span class="bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 px-3 py-1 rounded-full">
                                                            {publication['subtype']}
                                                        </span>
                                                    )}
                                                </div>

                                                {publication['dc:description'] && (
                                                    <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed line-clamp-3">
                                                        {publication['dc:description']}
                                                    </p>
                                                )}
                                            </div>

                                            <div class="flex flex-col items-end gap-2">
                                                {publication['citedby-count'] && (
                                                    <div class="text-right">
                                                        <div class="text-2xl font-bold text-msu-main-color dark:text-yellow-500">
                                                            {publication['citedby-count']}
                                                        </div>
                                                        <div class="text-xs text-gray-500 dark:text-gray-400">
                                                            Citations
                                                        </div>
                                                    </div>
                                                )}
                                                
                                                <a 
                                                    href={publication['dc:identifier'] ? `https://www.scopus.com/record/display.uri?eid=${publication['dc:identifier'].replace('SCOPUS_ID:', '')}` : '#'} 
                                                    target="_blank" 
                                                    rel="noopener noreferrer"
                                                    class="inline-flex items-center px-4 py-2 bg-msu-main-color hover:bg-msu-dark-color text-white text-sm font-medium rounded-lg transition-colors duration-300"
                                                >
                                                    View on Scopus
                                                    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>

                            <!-- Pagination -->
                            {totalResults > resultsPerPage && (
                                <div class="mt-12 flex justify-center">
                                    <nav class="flex items-center space-x-2">
                                        <button 
                                            id="prevPage"
                                            class="px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                                            disabled={currentPage === 1}
                                        >
                                            Previous
                                        </button>
                                        
                                        <span class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                                            Page {currentPage} of {Math.ceil(totalResults / resultsPerPage)}
                                        </span>
                                        
                                        <button 
                                            id="nextPage"
                                            class="px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                                            disabled={currentPage >= Math.ceil(totalResults / resultsPerPage)}
                                        >
                                            Next
                                        </button>
                                    </nav>
                                </div>
                            )}
                        </div>
                    ) : (
                        <div class="text-center py-12">

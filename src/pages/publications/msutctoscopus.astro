            const keywords = keywordsElement ? keywordsElement.value.trim() : '';
            const year = yearElement ? yearElement.value : '';
            const docType = docTypeElement ? docTypeElement.value : '';
            
            let query = 'AFFIL("MSU TCTO") OR AFFIL("Mindanao State University Tawi-Tawi College of Technology and Oceanography") OR AFFIL("Tawi-Tawi College of Technology and Oceanography")';
            
            if (keywords) {
                query += ` AND (TITLE("${keywords}") OR AUTH("${keywords}") OR ABS("${keywords}"))`;
            }
            
            if (year) {
                query += ` AND PUBYEAR = ${year}`;
            }
            
            if (docType) {
                query += ` AND SUBTYPE("${docType}")`;
            }
            
            return query;
        }


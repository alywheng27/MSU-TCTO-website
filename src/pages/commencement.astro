---
import Layout from '../layouts/introloader.astro';
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import '../styles/css/global.css';
import '../styles/css/globalanimate.css';

const currentPath = Astro.url.pathname;
---

<Layout title="MSU-TCTO | Commencement Exercises">
    
    <main class="font-sans antialiased text-gray-800 leading-normal">
        <!-- Navbar -->
        <Navbar path={currentPath} client:visible />

        <!-- Hero Section with Graduation Theme -->
        <section class="relative bg-msu-main-color h-screen min-h-[700px] flex items-center overflow-hidden pt-[80px]">
            <!-- Background Image -->
            <div class="absolute inset-0 z-0 overflow-hidden">
                <img src="/images/commencement/Background.png" alt="Graduation Ceremony" class="w-full h-full object-cover" />
                <div class="absolute inset-0 bg-black/50"></div>
            </div>
            <!-- Decorative Ukkil Elements -->
            <div class="absolute inset-0 z-1 pointer-events-none">
                <!-- Top Ukkil -->
                <img 
                    src="/images/commencement/"
                    alt="Decorative Top Ukkil"
                    class="absolute left-0 top-0 w-full h-auto object-contain opacity-40"
                >
                
                <!-- Bottom Ukkil -->
                <img 
                    src="/images/commencement/" 
                    alt="Decorative Bottom Ukkil"
                    class="absolute left-0 bottom-0 w-full h-auto object-contain opacity-40"
                >
            </div>
            <!-- Gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-msu-deep-ocean/90 via-msu-main-color/50 to-transparent z-1"></div>
            
            <!-- Content -->
            <div class="container mx-auto px-4 sm:px-6 z-10 relative">
                <div class="max-w-4xl mx-auto text-center px-4">
                    <!-- University Seal -->
                    <div class="mb-6 md:mb-8 animate-fadeIn">
                        <img 
                            src="/images/commencement/53rd text.png" 
                            alt="MSU Official Seal" 
                            class="h-20 sm:h-24 md:h-32 mx-auto transition-all duration-500 hover:scale-105"
                            loading="eager"
                        >
                    </div>
                    
                    <!-- Guest Speakers -->
                    <div class="mt-8 mb-12 animate-fadeInUp">
                        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-6">Distinguished Guest Speakers</h2>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                            <!-- Guest Speaker 1 -->
                            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 transition-all duration-300 hover:bg-white/20 cursor-pointer" onclick="openModal('/images/commencement/assoc.jpg', 'Assoc. Prof. Aljemedin Jaudinez')">
                                <div class="aspect-square rounded-lg overflow-hidden mb-4">
                                    <img 
                                        src="/images/commencement/assoc.jpg" 
                                        alt="Guest Speaker" 
                                        class="w-full h-full object-cover"
                                    >
                                </div>
                                <h3 class="text-white font-bold text-lg">Assoc. Prof. Aljemedin Jaudinez</h3>
                                <p class="text-white/90 text-sm">Faculty, College of Education, MSU-TCTO</p>
                                <p class="text-white/80 text-xs mt-1">Guest Speaker</p>
                            </div>

                            <!-- Guest Speaker 2 -->
                            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 transition-all duration-300 hover:bg-white/20 cursor-pointer" onclick="openModal('/images/commencement/atty.jpg', 'Atty. Mohammad Jamalul J. Giducos, LL.M.')">
                                <div class="aspect-square rounded-lg overflow-hidden mb-4">
                                    <img 
                                        src="/images/commencement/atty.jpg" 
                                        alt="Guest Speaker" 
                                        class="w-full h-full object-cover"
                                    >
                                </div>
                                <h3 class="text-white font-bold text-lg"> Atty. Mohammad Jamalul J. Giducos, LL.M.  </h3>
                                <p class="text-white/90 text-sm">Director of Legal and Amnesty Operations, National Amnesty Commission</p>
                                <p class="text-white/80 text-xs mt-1">Pre Commencement Speaker</p>
                            </div>

                            <!-- Guest Speaker 3 -->
                            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 transition-all duration-300 hover:bg-white/20 cursor-pointer" onclick="openModal('/images/commencement/engr.jpg', 'Engr. Firash Zhed S. Ututalum, MS')">
                                <div class="aspect-square rounded-lg overflow-hidden mb-4">
                                    <img 
                                        src="/images/commencement/engr.jpg" 
                                        alt="Guest Speaker" 
                                        class="w-full h-full object-cover"
                                    >
                                </div>
                                <h3 class="text-white font-bold text-lg">Engr. Firash Zhed S. Ututalum, MS  </h3>
                                <p class="text-white/90 text-sm">Dean of Student Affairs, Sulu State College</p>
                                <p class="text-white/80 text-xs mt-1">Pre Commencement Speaker</p>
                            </div>

                            <!-- Guest Speaker 4 -->
                            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 transition-all duration-300 hover:bg-white/20 cursor-pointer" onclick="openModal('/images/commencement/director.jpg', 'Dr. Jayeel S. Cornelio')">
                                <div class="aspect-square rounded-lg overflow-hidden mb-4">
                                    <img 
                                        src="/images/commencement/director.jpg" 
                                        alt="Guest Speaker" 
                                        class="w-full h-full object-cover"
                                    >
                                </div>
                                <h3 class="text-white font-bold text-lg">Dr. Jayeel S. Cornelio </h3>
                                <p class="text-white/90 text-sm">Director, DOST Science Education Institute</p>
                                <p class="text-white/80 text-xs mt-1">Commencement Speaker</p>
                            </div>
                        </div>
                    </div>

                    <!-- Modal for enlarged image -->
                    <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden flex items-center justify-center">
                        <div class="relative max-w-4xl w-full mx-4">
                            <button onclick="closeModal()" class="absolute top-4 right-4 text-white hover:text-gray-300 focus:outline-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                            <img id="modalImage" src="" alt="" class="w-full rounded-lg animate-scaleIn">
                            <p id="modalCaption" class="text-white text-center mt-4 text-xl"></p>
                        </div>
                    </div>

                    <script>
                        function openModal(imageSrc, caption) {
                            const modal = document.getElementById('imageModal');
                            const modalImg = document.getElementById('modalImage') as HTMLImageElement;
                            const modalCaption = document.getElementById('modalCaption');
                            
                            if (modalImg && modalCaption) {
                                modalImg.src = imageSrc;
                                modalImg.alt = caption;
                                modalCaption.textContent = caption;
                                modal?.classList.remove('hidden');
                                document.body.style.overflow = 'hidden';
                            }
                        }

                        function closeModal() {
                            const modal = document.getElementById('imageModal');
                            modal?.classList.add('hidden');
                            document.body.style.overflow = 'auto';
                        }

                        // Close modal when clicking outside the image
                        document.getElementById('imageModal')?.addEventListener('click', function(e) {
                            if (e.target === this) {
                                closeModal();
                            }
                        });

                        // Close modal with escape key
                        document.addEventListener('keydown', function(e) {
                            if (e.key === 'Escape') {
                                closeModal();
                            }
                        });
                    </script>

                    <!-- Ceremony Details -->
                    <div class="bg-white/20 backdrop-blur-sm rounded-xl p-6 max-w-2xl mx-auto animate-fadeInUp delay-100">
                        <p class="font-philosopher text-lg sm:text-xl text-white mb-4">
                            {new Date(new Date().getFullYear(), 5, 15).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}
                        </p>
                        <p class="text-white text-lg mb-4">
                            MSU-TCTO Gymnasium<br>
                            8:00 AM
                        </p>
                        <div class="w-20 h-1 bg-msu-gold mx-auto my-4"></div>
                        <p class="text-white italic">
                            "Celebrating Excellence, Forging Futures"
                        </p>
                    </div>
                    
                    <!-- Call-to-Action Buttons -->
                    <div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4 mt-8 animate-fadeInUp delay-200">
                        <a 
                            href="#invitation" 
                            class="bg-msu-main-color hover:bg-msu-deep-ocean text-white font-medium py-2 sm:py-3 px-4 sm:px-6 rounded-full transition-all duration-300 inline-flex items-center justify-center hover:shadow-lg"
                        >
                            View Invitation
                        </a>
                        <a 
                            href="#schedule" 
                            class="bg-white/10 border border-white hover:bg-white/20 text-white font-medium py-2 sm:py-3 px-4 sm:px-6 rounded-full transition-all duration-300 inline-flex items-center justify-center hover:shadow-lg"
                        >
                            Ceremony Schedule
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Scrolling Indicator -->
            <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
                <a href="#invitation" class="block p-2 focus:outline-none">
                    <svg class="w-6 h-6 text-white/90 hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                    </svg>
                </a>
            </div>
        </section>

        <!-- Digital Invitation Section -->
        <section id="invitation" class="py-20 bg-gradient-to-b from-white to-gray-50">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-msu-deep-ocean mb-4">Commencement Invitation</h2>
                    <div class="w-20 h-1 bg-msu-gold mx-auto"></div>
                </div>
                
                <!-- Invitation Card -->
                <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-2xl overflow-hidden border border-gray-100 transform hover:scale-[1.01] transition-transform duration-300">
                    <div class="md:flex">
                        <!-- Invitation Image -->
                        <div class="md:w-1/2 bg-msu-deep-ocean flex items-center justify-center p-8">
                            <img src="/images/commencement/ORIGINAL MSU-TCTO LOGO.png" alt="MSU-TCTO Seal" class="w-64 h-64 object-contain opacity-90">
                        </div>
                        
                        <!-- Invitation Text -->
                        <div class="md:w-1/2 p-8 md:p-12">
                            <div class="text-center">
                                <h3 class="text-2xl font-bold text-msu-deep-ocean mb-2">You Are Cordially Invited</h3>
                                <p class="text-gray-600 mb-6">to the</p>
                                
                                <h4 class="text-3xl font-bold text-msu-deep-ocean mb-4">{new Date().getFullYear()} Commencement Exercises</h4>
                                
                                <div class="space-y-4 text-gray-700 mb-8">
                                    <p>Mindanao State University</p>
                                    <p>Tawi-Tawi College of Technology and Oceanography</p>
                                    <p class="font-semibold">{new Date(new Date().getFullYear(), 5, 15).toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' })}</p>
                                    <p>8:00 AM | University Gymnasium</p>
                                </div>
                                
                                <div class="border-t border-gray-200 pt-6">
                                    <p class="text-sm text-gray-500">Academic Attire Required</p>
                                    <p class="text-sm text-gray-500">Reception to Follow</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Download Button -->
                <div class="text-center mt-10">
                    <a href="/downloads/commencement-invitation.pdf" class="inline-flex items-center px-6 py-3 bg-msu-main-color text-white rounded-lg font-medium hover:bg-msu-deep-ocean transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                        </svg>
                        Download Official Invitation
                    </a>
                </div>
            </div>
        </section>

        <!-- Ceremony Schedule -->
        <section id="schedule" class="py-20 bg-gray-50">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-msu-main-color mb-4">Ceremony Schedule</h2>
                    <div class="w-20 h-1 bg-msu-gold mx-auto"></div>
                </div>
                
                <!-- Timeline -->
                <div class="max-w-3xl mx-auto">
                    <div class="space-y-8">
                        <!-- Processional -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-msu-main-color text-white flex items-center justify-center mr-4 mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                            </div>
                            <div class="flex-1 bg-white p-6 rounded-lg shadow-md border-l-4 border-msu-main-color">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">7:00 AM - Processional</h3>
                                <p class="text-gray-600">Faculty, administrators, and graduating students assemble at the academic quadrangle for the academic procession.</p>
                            </div>
                        </div>
                        
                        <!-- Opening Ceremonies -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-msu-main-color text-white flex items-center justify-center mr-4 mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                </svg>
                            </div>
                            <div class="flex-1 bg-white p-6 rounded-lg shadow-md border-l-4 border-msu-main-color">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">8:00 AM - Opening Ceremonies</h3>
                                <ul class="list-disc pl-5 space-y-2 text-gray-600">
                                    <li>National Anthem</li>
                                    <li>University Hymn</li>
                                    <li>Invocation</li>
                                    <li>Welcome Remarks</li>
                                </ul>
                            </div>
                        </div>
                        
                        <!-- Conferment of Degrees -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-msu-main-color text-white flex items-center justify-center mr-4 mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                                </svg>
                            </div>
                            <div class="flex-1 bg-white p-6 rounded-lg shadow-md border-l-4 border-msu-main-color">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">9:00 AM - Conferment of Degrees</h3>
                                <ul class="list-disc pl-5 space-y-2 text-gray-600">
                                    <li>Presentation of Candidates</li>
                                    <li>Conferment of Degrees by the Chancellor</li>
                                    <li>Awarding of Diplomas</li>
                                    <li>Recognition of Honors and Awards</li>
                                </ul>
                            </div>
                        </div>
                        
                        <!-- Keynote Address -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-msu-main-color text-white flex items-center justify-center mr-4 mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div class="flex-1 bg-white p-6 rounded-lg shadow-md border-l-4 border-msu-main-color">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">10:30 AM - Keynote Address</h3>
                                <p class="text-gray-600 font-semibold mb-2">Dr. Maria Cristina D. Padolina</p>
                                <p class="text-gray-600">President Emeritus, MSU System</p>
                            </div>
                        </div>
                        
                        <!-- Closing Ceremonies -->
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-msu-main-color text-white flex items-center justify-center mr-4 mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div class="flex-1 bg-white p-6 rounded-lg shadow-md border-l-4 border-msu-main-color">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">11:30 AM - Closing Ceremonies</h3>
                                <ul class="list-disc pl-5 space-y-2 text-gray-600">
                                    <li>Alumni Induction</li>
                                    <li>Closing Remarks</li>
                                    <li>Recessional</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Graduates Spotlight -->
        <section class="py-20 bg-gradient-to-r from-msu-main-color to-msu-deep-ocean text-white">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Class of {new Date().getFullYear()}</h2>
                    <div class="w-20 h-1 bg-msu-gold mx-auto"></div>
                </div>
                
                <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                    <!-- Top Graduates -->
                    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 text-center border border-white/20">
                        <div class="w-32 h-32 mx-auto mb-6 rounded-full overflow-hidden border-4 border-msu-gold">
                            <img src="/images/commencement/valedictorian.jpg" alt="Valedictorian" class="w-full h-full object-cover">
                        </div>
                        <h3 class="text-2xl font-bold mb-2">Summa Cum Laude</h3>
                        <p class="text-xl mb-1">Sarah M. Hassan</p>
                        <p class="text-msu-gold font-medium">BS Fisheries</p>
                        <p class="text-sm mt-4">GPA: 1.02</p>
                    </div>
                    
                    <!-- By the Numbers -->
                    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 border border-white/20">
                        <h3 class="text-2xl font-bold mb-6 text-center">By The Numbers</h3>
                        <div class="space-y-4">
                            <div class="flex justify-between items-center border-b border-white/20 pb-2">
                                <span>Total Graduates</span>
                                <span class="font-bold">428</span>
                            </div>
                            <div class="flex justify-between items-center border-b border-white/20 pb-2">
                                <span>With Honors</span>
                                <span class="font-bold">112</span>
                            </div>
                            <div class="flex justify-between items-center border-b border-white/20 pb-2">
                                <span>Degree Programs</span>
                                <span class="font-bold">6</span>
                            </div>
                            <div class="flex justify-between items-center border-b border-white/20 pb-2">
                                <span>International Students</span>
                                <span class="font-bold">18</span>
                            </div>
                            <div class="flex justify-between items-center border-b border-white/20 pb-2">
                                <span>First Generation</span>
                                <span class="font-bold">63%</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Salutatorian -->
                    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 text-center border border-white/20">
                        <div class="w-32 h-32 mx-auto mb-6 rounded-full overflow-hidden border-4 border-msu-gold">
                            <img src="/images/commencement/salutatorian.jpg" alt="Salutatorian" class="w-full h-full object-cover">
                        </div>
                        <h3 class="text-2xl font-bold mb-2">Magna Cum Laude</h3>
                        <p class="text-xl mb-1">Ahmad R. Abdullah</p>
                        <p class="text-msu-gold font-medium">BS Information Technology</p>
                        <p class="text-sm mt-4">GPA: 1.15</p>
                    </div>
                </div>
                
                <div class="text-center mt-12">
                    <a href="/commencement/graduates" class="inline-flex items-center px-6 py-3 bg-white text-msu-main-color rounded-lg font-medium hover:bg-gray-100 transition-colors">
                        View Complete Graduates List
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </section>

        <!-- Enhanced Photo Gallery Search Section -->
        <section class="bg-gradient-to-br from-white to-white py-16 px-4">
            <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-xl p-8 md:p-12">
                <h2 class="text-3xl md:text-4xl font-extrabold text-msu-deep-ocean mb-2 text-center">Find Your Graduation Photos</h2>
                <p class="text-gray-500 mb-8 text-center">Enter your name started at Family Name, Given Name then Middle Name. Example Bonifacio, Andres M  and birth date to search the official gallery.</p>
                <form id="photoSearchForm" class="flex flex-col md:flex-row gap-4 items-center justify-center">
                    <input 
                        type="text"
                        name="name"
                        id="searchName"
                        placeholder="Enter Your Full Name" 
                        class="input-lg flex-1 px-4 py-3 rounded-lg border-2 border-msu-main-color focus:border-msu-deep-ocean focus:ring-2 focus:ring-msu-gold transition w-full md:w-auto"
                        required
                    />
                    <input 
                        type="date"
                        name="birthdate"
                        id="searchBirthdate"
                        class="input-lg px-4 py-3 rounded-lg border-2 border-msu-main-color focus:border-msu-deep-ocean focus:ring-2 focus:ring-msu-gold transition w-full md:w-auto"
                        required
                    />
                    <button 
                        type="submit"
                        id="searchButton"
                        class="btn-gradient flex items-center gap-2 px-6 py-3 rounded-lg font-bold text-white bg-gradient-to-r from-msu-main-color via-msu-gold to-msu-deep-ocean hover:from-msu-deep-ocean hover:to-msu-main-color transition shadow-lg focus:outline-none focus:ring-2 focus:ring-msu-gold"
                    >

---
import { useMemo } from 'react';
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import ChancellorMessage from "../../components/ChancellorMessage.astro";
import MainVideo from "../../components/MainVideo.astro";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import FacultyAndStaff from "../../components/FacultyAndStaff";

import '../../styles/css/global.css';
import ReactTable from '../../components/ReactTable';

const currentPath = Astro.url.pathname;

// Academic Offices Data
const academicOffices = [
  {
    name: "COLLEGE OF ARTS AND SCIENCES",
    logo: "/images/College Logo/LOGO CAS.png", // Replace with actual path
    link: "/programs/cas", // Replace with actual link
  },
  {
    name: "COLLEGE OF ISLAMIC & ARABIC STUDIES",
    logo: "/images/College Logo/LOGO CIAS.png", // Replace with actual path
    link: "/programs/cias", // Replace with actual link
  },
  {
    name: "COLLEGE OF EDUCATION",
    logo: "/images/College Logo/LOGO COED.png", // Replace with actual path
    link: "/programs/coed", // Replace with actual link
  },
  {
    name: "COLLEGE OF FISHERIES",
    logo: "/images/College Logo/LOGO COF.png", // Replace with actual path
    link: "/programs/cof", // Replace with actual link
  },
  {
    name: "INSTITUTE OF INFORMATION & COMMUNICATIONS TECHNOLOGY",
    logo: "/images/College Logo/LOGO IICT.png", // Replace with actual path
    link: "/programs/iict", // Replace with actual link
  },
  {
    name: "INSTITUTE OF OCEANOGRAPHY & ENVIRONMENTAL SCIENCE",
    logo: "/images/College Logo/LOGO IOES.png", // Replace with actual path
    link: "/programs/ioes", // Replace with actual link
  },
];
---

<Layout title="MSU | Tawi-Tawi College of Technology and Oceanography">
	<main>
		<Navbar path={currentPath} client:visible />

		<!-- Parallax Background Section -->
		<div class="parallax-section bg-fixed bg-cover bg-center py-20" style="background-image: url('/images/landing_page4.png');">
			<div class="text-center px-4 sm:px-6 lg:px-8">
				<h3 class="headings text-4xl md:text-5xl font-bold text-white mb-10">Academic Offices</h3>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
					{academicOffices.map((office) => (
						<div class="office-card bg-white/90 backdrop-blur-sm rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-2">
							<a href={office.link} class="block">
								<img
									src={office.logo}
									alt={`${office.name} Logo`}
									class="w-24 h-24 mx-auto mb-4 object-contain transition-transform duration-300 hover:scale-110"
								/>
							</a>
							<p class="paragraph text-lg font-semibold text-charcoal">{office.name}</p>
						</div>
					))}
				</div>
			</div>
		</div>

		<!-- FooterNav -->
		<FooterNav />

		<!-- Footer -->
		<Footer />
	</main>
</Layout>

<style>
	/* Parallax Effect */
	.parallax-section {
		background-attachment: fixed;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
		position: relative;
	}

	/* Overlay for Better Readability */
	.parallax-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.4); /* Dark overlay for better contrast */
		z-index: 1;
	}

	.parallax-section > * {
		position: relative;
		z-index: 2;
	}

	/* Office Card Enhancements */
	.office-card {
		transition: all 0.3s ease;
	}

	.office-card:hover {
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
	}

	/* Responsive Adjustments */
	@media (max-width: 768px) {
		.office-card {
			padding: 1.5rem;
		}

		.office-card img {
			width: 20%;
			height: 20%;
		}
	}
</style>
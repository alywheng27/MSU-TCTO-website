---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar";
import AcademicCalendar from '../components/AcademicCalendar.astro';
import MainVideo from "../components/MainVideo.astro";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/Footer.astro";
import ProgramsDropDown from "../components/programsDropDown";
import '../styles/css/global.css';

const currentPath = Astro.url.pathname;
---

<Layout title="MSU | Tawi-Tawi College of Technology and Oceanography">
    <main class="bg-white">
        <Navbar path={currentPath} client:visible />

        <!-- Hero Section -->
        <div class="relative pt-24 pb-12 bg-msu-main-color">
            <div class="container mx-auto px-4 xl:px-0 relative">
                <!-- Breadcrumb -->
                <div class="mb-8">
                    <p class="paragraph p2 text-gray-300">
                        <a href="/home" class="hover:text-msu-gold transition-colors">Home</a> / 
                        <span class="text-white">Academic Programs</span>
                    </p>
                </div>

                <!-- Hero Content -->
                <div class="text-center mb-12">
                    <h1 class="headings text-5xl font-bold text-white mb-6">Our Academic Programs</h1>
                    <div class="w-24 h-1.5 bg-msu-deep-ocean mx-auto mb-6"></div>
                    <p class="paragraph p2 text-gray-300 max-w-3xl mx-auto text-lg">
                        Pursuing academic excellence, intellectual freedom, creative autonomy, specialized learning, and impactful research is our way of life.
                    </p>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="py-16 bg-msu-blue/10">
            <div class="container mx-auto px-4 xl:px-0">
                <div class="grid xl:grid-cols-3 xs:grid-cols-2 justify-items-center gap-8">
                    <div class="bg-white p-8 rounded-xl shadow-lg text-center max-w-[360px]">
                        <h2 class="headings text-5xl font-bold text-msu-main-color mb-2">102+</h2>
                        <p class="paragraph p2 text-gray-700">National and International Partners</p>
                    </div>
                    <div class="bg-white p-8 rounded-xl shadow-lg text-center max-w-[360px]">
                        <h2 class="headings text-5xl font-bold text-msu-main-color  mb-2">55+</h2>
                        <p class="paragraph p2 text-gray-700">Ongoing local research for biodiversity</p>
                    </div>
                    <div class="bg-white p-8 rounded-xl shadow-lg text-center max-w-[360px] xl:block xs:hidden">
                        <h2 class="headings text-5xl font-bold text-msu-main-color  mb-2">30+</h2>
                        <p class="paragraph p2 text-gray-700">Curriculum programs of TCTO</p>
                    </div>
                </div>
                <div class="bg-white p-8 rounded-xl shadow-lg text-center max-w-[360px] mx-auto mt-8 xl:hidden xs:block">
                    <h2 class="headings text-5xl font-bold text-msu-dark-blue mb-2">30+</h2>
                    <p class="paragraph p2 text-gray-700">Curriculum programs of TCTO</p>
                </div>
            </div>
        </div>

        <!-- Programs Section -->
        <div class="py-16 bg-white">
            <div class="container mx-auto px-4 xl:px-0">
                <div class="text-center mb-16">
                    <h2 class="headings text-4xl font-bold text-msu-main-color  mb-4">Our Colleges and Institutes</h2>
                    <div class="w-24 h-1.5 bg-msu-deep-ocean mx-auto"></div>
                </div>

                <!-- College of Arts and Sciences -->
                <div class="mb-16 bg-gray-50 rounded-xl p-8 shadow-md">
                    <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
                        <img src="/images/College Logo/LOGO CAS.png" class="w-40 h-40 object-contain" alt="CAS Logo">
                        <div>
                            <h3 class="headings text-3xl font-bold text-msu-main-color mb-2">
                                <a href="/cas" class="hover:text-msu-blue transition-colors">College of Arts and Sciences</a>
                            </h3>
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Graduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="#" class="hover:text-msu-blue transition-colors">Master in Public Administration</a></li>
                                <li><a href="#" class="hover:text-msu-blue transition-colors">Master of Science in Teaching Mathematics</a></li>
                                <li><a href="https://drive.google.com/file/d/1-nR4D-JxwCTGbQnqUWM1zACgGk-QF4ME/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Master of Arts in English Language Teaching</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Undergraduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/1nnhyYyiE3kl3SUm-LC5218bhlJUwHk3_/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Bachelor of Public Administration</a></li>
                                <li><a href="https://drive.google.com/file/d/1opvINEN2o8nhu30Kq6PAZhUwHdBIEOYm/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Business Administration (Marketing)</a></li>
                                <li><a href="https://drive.google.com/file/d/1nVHOCbhiUkXvxmpzWnoXZxjMhoYwipG7/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BA in Literary and Cultural Studies</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Other Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/1-q3se6aH5VEn8mHv2PNM6vrKO_wAcuEg/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BA in English Language Studies</a></li>
                                <li><a href="https://drive.google.com/file/d/1p04fYLXUYcL7LUQIN6-9tjKrqgbOyNRu/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Diploma in Office Management</a></li>
                                <li><a href="#" class="hover:text-msu-blue transition-colors">Professional Diploma Physical Education</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- College of Islamic & Arabic Studies -->
                <div class="mb-16 bg-gray-50 rounded-xl p-8 shadow-md">
                    <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
                        <img src="/images/College Logo/LOGO CIAS.png" class="w-40 h-40 object-contain" alt="CIAS Logo">
                        <div>
                            <h3 class="headings text-3xl font-bold text-msu-main-color mb-2">
                                <a href="/cias" class="hover:text-msu-blue transition-colors">College of Islamic & Arabic Studies</a>
                            </h3>
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Graduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/1o6V4gWfdf--bOOI0G8fyhg41hAJJvRLc/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Master of Arts in Islamic Education</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Undergraduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/13dpldTbgKueOYMFFm-_M0XrFforNN-FZ/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BA in Islamic Studies (Sharia)</a></li>
                                <li><a href="https://drive.google.com/file/d/13p2k38zFJObS_8c3PHjSdTSDudITklZ8/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Teaching Arabic</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- College of Education -->
                <div class="mb-16 bg-gray-50 rounded-xl p-8 shadow-md">
                    <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
                        <img src="/images/College Logo/LOGO COED.png" class="w-40 h-40 object-contain" alt="COED Logo">
                        <div>
                            <h3 class="headings text-3xl font-bold text-msu-main-color mb-2">
                                <a href="/coed" class="hover:text-msu-blue transition-colors">College of Education</a>
                            </h3>
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Doctoral Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="#" class="hover:text-msu-blue transition-colors">PhD in Education Management</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Graduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="#" class="hover:text-msu-blue transition-colors">MA in Education (Admin & Supervision)</a></li>
                                <li><a href="https://drive.google.com/file/d/1o7b4bg-jaAyHAoCaI0LdHCs79Uyl3FkD/view?usp=drive_link" class="hover:text-msu-blue transition-colors">MA in Education (Educational Management)</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Undergraduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/1o1wzRuhuiwsjLySKBJcHNXSAzm-xoo8W/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Bachelor of Elementary Education</a></li>
                                <li><a href="#https://drive.google.com/file/d/1gKDhP-1EHh48eD9QocIYKS1LhCArki5d/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Bachelor of Early Childhood Education</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- College of Fisheries -->
                <div class="mb-16 bg-gray-50 rounded-xl p-8 shadow-md">
                    <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
                        <img src="/images/College Logo/LOGO COF.png" class="w-40 h-40 object-contain" alt="COF Logo">
                        <div>
                            <h3 class="headings text-3xl font-bold text-msu-main-color mb-2">
                                <a href="/cof" class="hover:text-msu-blue transition-colors">College of Fisheries</a>
                            </h3>
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Graduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="#" class="hover:text-msu-blue transition-colors">MS in Aquaculture</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Undergraduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/1o2t1Ivt_DADBLip6f3i0-2W_tjtWSF-f/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Food Technology</a></li>
                                <li><a href="https://drive.google.com/file/d/13-b6dZBtnkp_PbnsbbKi4iJ7eSPwXuwB/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Fisheries (Aquaculture)</a></li>
                            </ul>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Diploma Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="#" class="hover:text-msu-blue transition-colors">Diploma in Fisheries Technology (Aquaculture)</a></li>
                                <li><a href="https://drive.google.com/file/d/1lU3plT3f17NQHTvliauxrEUi-NZfd30r/view?usp=drive_link" class="hover:text-msu-blue transition-colors">Diploma in Fisheries Technology (Fish Processing)</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Institute of Information and Communication Technology -->
                <div class="mb-16 bg-gray-50 rounded-xl p-8 shadow-md">
                    <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
                        <img src="/images/College Logo/LOGO IICT.png" class="w-40 h-40 object-contain" alt="IICT Logo">
                        <div>
                            <h3 class="headings text-3xl font-bold text-msu-main-color mb-2">
                                <a href="/iict" class="hover:text-msu-blue transition-colors">Institute of Information and Communication Technology</a>
                            </h3>
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Undergraduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/10EgGXSFoGTfT_qe7HYqknlNeT_KSqwT0/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Computer Applications</a></li>
                                <li><a href="https://drive.google.com/file/d/1pDlJDSRqbIAKcmx5FAHVZg8gICEde5O4/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Information Technology</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Institute of Oceanography and Environmental Science -->
                <div class="mb-16 bg-gray-50 rounded-xl p-8 shadow-md">
                    <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
                        <img src="/images/College Logo/IOES Logo.png" class="w-40 h-40 object-contain" alt="IOES Logo">
                        <div>
                            <h3 class="headings text-3xl font-bold text-msu-main-color mb-2">
                                <a href="/ioes" class="hover:text-msu-blue transition-colors">Institute of Oceanography and Environmental Science</a>
                            </h3>
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <h4 class="headings text-xl font-semibold text-msu-dark-blue mb-3">Undergraduate Programs</h4>
                            <ul class="space-y-2 paragraph p2 text-gray-700">
                                <li><a href="https://drive.google.com/file/d/1n2txgNFydhR8j_hKAPjjQdLknbIqvHiF/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Environmental Science</a></li>
                                <li><a href="https://drive.google.com/file/d/1mwEKaO9epZEvW2A_ZQ-joUTpkZ4TWVwF/view?usp=drive_link" class="hover:text-msu-blue transition-colors">BS in Marine Science</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Academic Calendar to be fix -->
        <!-- <AcademicCalendar /> -->
        
        <!-- Main Video -->
        <!-- <MainVideo /> -->
        
        <!-- Footer Navigation -->
        <FooterNav />
        
        <!-- Footer -->
        <Footer />

        <style global>
            :root {
                --msu-dark-blue: #003366;
                --msu-blue: #0066CC;
                --msu-light-blue: #E6F2FF;
                --msu-gold: #FFCC00;
                --msu-dark-gold: #E6B800;
            }
            
            .bg-msu-dark-blue {
                background-color: var(--msu-dark-blue);
            }
            
            .bg-msu-blue {
                background-color: var(--msu-blue);
            }
            
            .bg-msu-light-blue {
                background-color: var(--msu-light-blue);
            }
            
            .bg-msu-gold {
                background-color: var(--msu-gold);
            }
            
            .bg-msu-dark-gold {
                background-color: var(--msu-dark-gold);
            }
            
            .text-msu-dark-blue {
                color: var(--msu-dark-blue);
            }
            
            .text-msu-blue {
                color: var(--msu-blue);
            }
            
            .text-msu-gold {
                color: var(--msu-gold);
            }
            
            .border-msu-blue {
                border-color: var(--msu-blue);
            }
            
            .hover\:bg-msu-dark-gold:hover {
                background-color: var(--msu-dark-gold);
            }
            
            .hover\:text-msu-dark-blue:hover {
                color: var(--msu-dark-blue);
            }
        </style>
    </main>
</Layout>
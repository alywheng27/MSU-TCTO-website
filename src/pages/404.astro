<style is:global>
    /* Enhanced Animations */
    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }
    
    @keyframes pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.02);
        }
    }
    
    /* Dolphin Animation */
    @keyframes dolphin-swim {
        0% {
            transform: translateX(0) translateY(0) rotate(0deg);
        }
        25% {
            transform: translateX(50px) translateY(-10px) rotate(5deg);
        }
        50% {
            transform: translateX(100px) translateY(0) rotate(0deg);
        }
        75% {
            transform: translateX(150px) translateY(-10px) rotate(-5deg);
        }
        100% {
            transform: translateX(200px) translateY(0) rotate(0deg);
        }
    }
    
    .animate-dolphin-swim {
        animation: dolphin-swim 8s ease-in-out infinite;
    }
    
    /* Ripple Effect */
    @keyframes ripple {
        0% {
            transform: scale(0.8);
            opacity: 1;
        }
        100% {
            transform: scale(1.4);
            opacity: 0;
        }
    }
    
    .animate-ripple {
        animation: ripple 3s cubic-bezier(0, 0.2, 0.8, 1) infinite;
    }
    
    /* Progress Shine */
    @keyframes progress-shine {
        0% {
            left: -100%;
        }
        100% {
            left: 100%;
        }
    }
    
    .animate-progress-shine {
        animation: progress-shine 2s infinite;
    }
    
    /* Enhancements */
    .shadow-2xl {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
    }
    
    .transition-all {
        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
    }
    
    .backdrop-blur-sm {
        backdrop-filter: blur(4px);
    }
    
    /* Custom PC Icon Styling */
    .pc-icon-wave {
        stroke-dasharray: 4 1;
    }
    
    /* Responsive Adjustments */
    @media (max-width: 640px) {
        .animate-dolphin-swim {
            animation: dolphin-swim 12s ease-in-out infinite;
        }
    }
</style>
---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/Footer.astro";
import '../styles/css/global.css';

const currentPath = Astro.url.pathname;
---

<Layout title="404 | Page Not Found - MSU-Tawi-Tawi College of Technology and Oceanography">
	<main class="min-h-screen bg-gradient-to-b from-msu-maroon-100 via-white to-msu-maroon-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 overflow-hidden">
		<Navbar path={currentPath} client:visible />

		<section class="relative min-h-[85vh] flex flex-col items-center justify-center w-full xl:px-[12.5%] xs:px-[3.85%] py-16 md:py-24">
			{/* Subtle grid overlay */}
			<div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.06]" style="background-image: linear-gradient(#61063B 1px, transparent 1px), linear-gradient(90deg, #61063B 1px, transparent 1px); background-size: 48px 48px;"></div>

			{/* Floating bubbles - decorative */}
			<div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
				<div class="bubble bubble-1"></div>
				<div class="bubble bubble-2"></div>
				<div class="bubble bubble-3"></div>
				<div class="bubble bubble-4"></div>
				<div class="bubble bubble-5"></div>
				<div class="bubble bubble-6"></div>
				<div class="bubble bubble-7"></div>
				<div class="bubble bubble-8"></div>
			</div>

			{/* Ocean waves - multi-layer */}
			<div class="absolute bottom-0 left-0 right-0 h-32 md:h-40 overflow-hidden">
				<svg class="absolute bottom-0 w-full wave-svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
					<path class="fill-msu-maroon-200/40 dark:fill-msu-maroon-800/50" d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"></path>
					<path class="fill-msu-maroon-300/60 dark:fill-msu-maroon-700/60" d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z"></path>
					<path class="fill-msu-deep-ocean dark:fill-msu-maroon-600" d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
				</svg>
			</div>

			{/* Dolphin accent - optional */}
			<div class="absolute bottom-28 left-[15%] w-20 h-20 md:w-24 md:h-24 opacity-60 animate-dolphin-swim hidden sm:block" aria-hidden="true">
				<svg viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
					<path d="M510.37 246.26C503.69 238.9 494.07 235.03 484.23 235.03H374.86L300.57 160.74C293.71 153.89 284.23 150.4 274.29 150.4H150.4C133.94 150.4 120.46 163.89 120.46 180.34C120.46 196.8 133.94 210.29 150.4 210.29H246.4L194.74 261.94C187.89 268.8 184.4 278.29 184.4 288.23V384.23C184.4 400.69 197.89 414.17 214.34 414.17C230.8 414.17 244.29 400.69 244.29 384.23V314.51L313.14 383.37C319.54 389.77 328.23 393.14 337.37 393.14H484.23C494.07 393.14 503.69 389.27 510.37 381.91C517.03 374.56 520.91 364.91 520.8 355.09V273.09C520.91 263.26 517.03 253.62 510.37 246.26Z" class="fill-msu-deep-ocean"/>
					<path d="M120.46 288.23C120.46 271.77 106.97 258.29 90.51 258.29H27.43C10.97 258.29 0 269.26 0 285.71V384.23C0 400.69 13.49 414.17 29.94 414.17H90.51C106.97 414.17 120.46 400.69 120.46 384.23V288.23Z" class="fill-msu-deep-ocean"/>
				</svg>
			</div>

			{/* Main content card */}
			<div class="relative z-10 w-full max-w-4xl mx-auto text-center px-6 sm:px-8 py-10 sm:py-14 rounded-2xl sm:rounded-3xl bg-white/90 dark:bg-gray-800/90 backdrop-blur-md shadow-xl dark:shadow-2xl border border-msu-maroon-200/40 dark:border-gray-600/40 transition-all duration-500 hover:shadow-2xl hover:border-msu-maroon-300/60 dark:hover:border-msu-maroon-500/40 404-card">
				{/* 404 number - bold and interactive */}
				<div class="relative mb-4 sm:mb-6">
					<h1 class="font-philosopher text-7xl sm:text-8xl md:text-9xl lg:text-[10rem] font-bold tracking-tight select-none">
						<span class="text-transparent bg-clip-text bg-gradient-to-br from-msu-maroon-600 via-msu-deep-ocean to-msu-maroon-700 dark:from-msu-maroon-400 dark:via-msu-deep-ocean dark:to-msu-maroon-500 404-text">404</span>
					</h1>
					<div class="absolute inset-0 flex items-center justify-center pointer-events-none">
						<span class="font-philosopher text-7xl sm:text-8xl md:text-9xl lg:text-[10rem] font-bold text-msu-deep-ocean/10 dark:text-msu-maroon-400/10 blur-sm 404-glow">404</span>
					</div>
				</div>

				{/* Headline */}
				<h2 class="font-philosopher text-2xl sm:text-3xl md:text-4xl font-bold text-msu-maroon-800 dark:text-msu-maroon-200 mb-3">
					Lost at sea?
				</h2>
				<p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 max-w-xl mx-auto mb-8 leading-relaxed">
					The page you're looking for isn't here. Let's get you back to shore.
				</p>

				{/* CTA buttons */}
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-10">
					<a href="/" class="404-btn-primary group focus:outline-none focus-visible:ring-2 focus-visible:ring-msu-deep-ocean focus-visible:ring-offset-2 rounded-full">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 transition-transform group-hover:-translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
						</svg>
						Go to Home
					</a>
					<a href="/programs/cas" class="404-btn-secondary group focus:outline-none focus-visible:ring-2 focus-visible:ring-msu-deep-ocean focus-visible:ring-offset-2 rounded-full">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 transition-transform group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
						</svg>
						Browse Programs
					</a>
				</div>

				{/* Quick links */}
				<div class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-sm">
					<a href="/about/campus" class="text-msu-deep-ocean dark:text-msu-maroon-400 hover:underline font-medium transition-colors">About</a>
					<a href="/admissions/admissions" class="text-msu-deep-ocean dark:text-msu-maroon-400 hover:underline font-medium transition-colors">Admissions</a>
					<a href="/offices/offices" class="text-msu-deep-ocean dark:text-msu-maroon-400 hover:underline font-medium transition-colors">Offices</a>
					<a href="/publications/articles" class="text-msu-deep-ocean dark:text-msu-maroon-400 hover:underline font-medium transition-colors">Publications</a>
				</div>
			</div>

			{/* Contact strip */}
			<div class="relative z-10 mt-8 sm:mt-10 max-w-2xl mx-auto">
				<div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-8 p-4 sm:p-6 rounded-xl bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-msu-maroon-200/30 dark:border-gray-600/30 shadow-lg">
					<div class="flex items-center gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-msu-deep-ocean dark:text-msu-maroon-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
						<a href="mailto:icto@msutcto.edu.ph" class="text-gray-700 dark:text-gray-300 hover:text-msu-deep-ocean dark:hover:text-msu-maroon-400 font-medium transition-colors">icto@msutcto.edu.ph</a>
					</div>
					<a href="https://www.facebook.com/msutctoicto" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-[#1877F2] font-medium transition-colors">
						<svg class="h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
						@msutctoicto
					</a>
				</div>
			</div>
		</section>

		<FooterNav />
		<Footer />
	</main>
</Layout>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Philosopher:wght@400;700&display=swap');

	/* Bubbles */
	.bubble {
		position: absolute;
		border-radius: 50%;
		background: radial-gradient(circle at 30% 30%, rgba(97, 6, 59, 0.15), rgba(97, 6, 59, 0.05));
		animation: float-up 15s ease-in-out infinite;
	}
	.bubble-1 { width: 60px; height: 60px; left: 10%; top: 20%; animation-delay: 0s; }
	.bubble-2 { width: 40px; height: 40px; left: 25%; top: 60%; animation-delay: -3s; }
	.bubble-3 { width: 80px; height: 80px; right: 15%; top: 25%; animation-delay: -5s; }
	.bubble-4 { width: 30px; height: 30px; right: 30%; top: 70%; animation-delay: -7s; }
	.bubble-5 { width: 50px; height: 50px; left: 50%; top: 15%; animation-delay: -2s; }
	.bubble-6 { width: 35px; height: 35px; left: 75%; top: 55%; animation-delay: -4s; }
	.bubble-7 { width: 45px; height: 45px; left: 5%; top: 75%; animation-delay: -6s; }
	.bubble-8 { width: 55px; height: 55px; right: 8%; top: 45%; animation-delay: -1s; }

	@keyframes float-up {
		0%, 100% { transform: translateY(100vh) scale(0.5); opacity: 0; }
		10% { opacity: 0.6; }
		90% { opacity: 0.4; }
		100% { transform: translateY(-100px) scale(1); opacity: 0; }
	}

	/* Wave motion */
	.wave-svg {
		animation: wave-motion 8s ease-in-out infinite;
	}
	@keyframes wave-motion {
		0%, 100% { transform: translateX(0) scaleY(1); }
		50% { transform: translateX(-2%) scaleY(1.02); }
	}

	/* Dolphin */
	@keyframes dolphin-swim {
		0% { transform: translateX(0) translateY(0) rotate(0deg); }
		25% { transform: translateX(30px) translateY(-8px) rotate(5deg); }
		50% { transform: translateX(60px) translateY(0) rotate(0deg); }
		75% { transform: translateX(90px) translateY(-8px) rotate(-5deg); }
		100% { transform: translateX(120px) translateY(0) rotate(0deg); }
	}
	.animate-dolphin-swim {
		animation: dolphin-swim 10s ease-in-out infinite;
	}

	/* 404 text shimmer */
	.404-text {
		animation: text-shimmer 4s ease-in-out infinite;
	}
	@keyframes text-shimmer {
		0%, 100% { filter: brightness(1); }
		50% { filter: brightness(1.08); }
	}

	/* Card hover lift */
	.404-card {
		transform: translateY(0);
	}
	.404-card:hover {
		transform: translateY(-4px);
	}

	/* Primary CTA - msu-deep-ocean #61063B */
	.404-btn-primary {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 1.5rem;
		font-weight: 700;
		color: white;
		background-color: #61063B;
		background: #61063B;
		border-radius: 9999px;
		box-shadow: 0 4px 14px rgba(97, 6, 59, 0.4);
		transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
	}
	.404-btn-primary:hover {
		transform: translateY(-2px) scale(1.02);
		background-color: #4D052F;
		background: #4D052F;
		box-shadow: 0 8px 24px rgba(97, 6, 59, 0.5);
	}
	.404-btn-primary:active {
		transform: translateY(0) scale(0.98);
	}

	/* Secondary CTA */
	.404-btn-secondary {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 1.5rem;
		font-weight: 700;
		color: #61063B;
		background: transparent;
		border: 2px solid #61063B;
		border-radius: 9999px;
		transition: transform 0.2s ease, background 0.2s ease, color 0.2s ease;
	}
	.404-btn-secondary:hover {
		background: rgba(97, 6, 59, 0.08);
		transform: translateY(-2px);
	}
	.404-btn-secondary:active {
		transform: translateY(0);
	}
	.dark .404-btn-secondary {
		color: #D58BB5;
		border-color: #D58BB5;
	}
	.dark .404-btn-secondary:hover {
		background: rgba(213, 139, 181, 0.15);
	}

	@media (max-width: 640px) {
		.animate-dolphin-swim { animation-duration: 14s; }
		.bubble { animation-duration: 20s; }
	}
</style>

<script define:vars={{ galleryImagesData: galleryImages, aiSummaryText: aiSummary }}>
  // Gallery images data
  const galleryImages = galleryImagesData.map((img, index) => ({
    url: img.url,
    caption: img.caption || '',
    alt: img.alt || `Gallery image ${index + 1}`
  }));

  // Gallery state
  let currentImageIndex = 0;
  const modal = document.getElementById('gallery-modal');
  const mainImage = document.getElementById('gallery-main-image');
  const counter = document.getElementById('gallery-counter');
  const caption = document.getElementById('gallery-caption');
  const prevBtn = document.getElementById('gallery-prev');
  const nextBtn = document.getElementById('gallery-next');
  const closeBtn = document.getElementById('gallery-close');
  const summaryPanel = document.getElementById('ai-summary-panel');
  const summaryButton = document.getElementById('ai-summary-button');
  const summaryClose = document.getElementById('ai-summary-close');
  const summaryMinimize = document.getElementById('ai-summary-minimize');
  const summaryCopy = document.getElementById('ai-summary-copy');
  const summaryText = document.getElementById('ai-summary-text');
  const summaryCopyLabel = document.getElementById('ai-summary-copy-label');

  // Prevent body scroll when modal is open (better for mobile)
  let scrollY = 0;

  function lockBodyScroll() {
    scrollY = window.scrollY || window.pageYOffset;
    document.body.style.position = 'fixed';
    document.body.style.top = `-${scrollY}px`;
    document.body.style.width = '100%';
    document.body.style.overflow = 'hidden';
    // Prevent iOS bounce effect
    document.documentElement.style.overflow = 'hidden';
  }

  function unlockBodyScroll() {
    document.body.style.position = '';
    document.body.style.top = '';
    document.body.style.width = '';
    document.body.style.overflow = '';
    document.documentElement.style.overflow = '';
    if (scrollY !== undefined) {
      window.scrollTo(0, scrollY);
    }
  }

  // Open gallery modal
  function openGallery(index) {
    if (galleryImages.length === 0) return;
    currentImageIndex = index;
    
    // Remove any duplicate close buttons before opening
    if (modal) {
      const closeButtons = modal.querySelectorAll('#gallery-close');
      if (closeButtons.length > 1) {
        // Keep only the first one, remove the rest
        for (let i = 1; i < closeButtons.length; i++) {
          closeButtons[i].remove();
        }
      }
    }
    
    updateGalleryImage();
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      // Force display for mobile devices
      modal.style.display = 'flex';
      modal.style.visibility = 'visible';
      modal.style.opacity = '1';
    }
    lockBodyScroll();
  }

  // Close gallery modal
  function closeGallery(e) {
    // Prevent event bubbling
    if (e) {
      e.preventDefault();
      e.stopPropagation();
    }
    
    if (modal) {
      // Force close with multiple methods
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      // Reset inline styles
      modal.style.display = 'none';
      modal.style.visibility = 'hidden';
      modal.style.opacity = '0';
      // Also set aria-hidden for accessibility
      modal.setAttribute('aria-hidden', 'true');
    }
    unlockBodyScroll();
    
    // Return false to prevent any default behavior
    return false;
  }

  // Update gallery image display
  function updateGalleryImage() {
    if (!mainImage || !counter || !caption || galleryImages.length === 0) return;
    
    const currentImage = galleryImages[currentImageIndex];
    if (!currentImage) return;

    // Update image source
    mainImage.src = currentImage.url;
    mainImage.alt = currentImage.alt || `Gallery image ${currentImageIndex + 1}`;
    
    // Ensure image is visible
    mainImage.style.display = 'block';
    mainImage.style.visibility = 'visible';
    mainImage.style.opacity = '1';
    
    // Update counter
    counter.textContent = `${currentImageIndex + 1} of ${galleryImages.length}`;
    
    // Update caption
    caption.textContent = currentImage.caption || '';
    
    // Update button states
    if (prevBtn) {
      prevBtn.disabled = currentImageIndex === 0;
      prevBtn.style.display = 'flex';
      prevBtn.style.visibility = 'visible';
    }
    if (nextBtn) {
      nextBtn.disabled = currentImageIndex === galleryImages.length - 1;
      nextBtn.style.display = 'flex';
      nextBtn.style.visibility = 'visible';
    }
    if (closeBtn) {
      closeBtn.style.display = 'flex';
      closeBtn.style.visibility = 'visible';
    }
  }

  // Navigate to previous image
  function prevImage() {
    if (currentImageIndex > 0) {
      currentImageIndex--;
      updateGalleryImage();
    }
  }

  // Navigate to next image
  function nextImage() {
    if (currentImageIndex < galleryImages.length - 1) {
      currentImageIndex++;
      updateGalleryImage();
    }
  }

  // Initialize gallery on page load
  document.addEventListener('DOMContentLoaded', () => {
    // Populate AI summary text
    if (summaryText) {
      summaryText.textContent = aiSummaryText || 'Summary not available.';
    }

    const openSummary = (e) => {
      if (e?.preventDefault) e.preventDefault();
      if (!summaryPanel) return;
      summaryPanel.classList.add('open');
      summaryPanel.setAttribute('aria-hidden', 'false');
    };

    const closeSummary = (e) => {
      if (e?.preventDefault) e.preventDefault();
      if (!summaryPanel) return;
      summaryPanel.classList.remove('open');
      summaryPanel.setAttribute('aria-hidden', 'true');
    };

    if (summaryButton) {
      summaryButton.addEventListener('click', openSummary);
    }
    summaryClose?.addEventListener('click', closeSummary);
    summaryMinimize?.addEventListener('click', closeSummary);

    if (summaryCopy) {
      summaryCopy.addEventListener('click', async (e) => {
        e.preventDefault();
        if (!summaryText?.textContent) return;
        try {
          await navigator.clipboard.writeText(summaryText.textContent);
          if (summaryCopyLabel) {
            summaryCopyLabel.textContent = 'Copied!';
            setTimeout(() => (summaryCopyLabel.textContent = 'Copy summary'), 1600);
          }
        } catch (err) {
          console.warn('Clipboard not available', err);
        }
      });
    }

    // Remove any duplicate close buttons on page load
    if (modal) {
      const closeButtons = modal.querySelectorAll('#gallery-close');
      if (closeButtons.length > 1) {
        // Keep only the first one, remove the rest
        for (let i = 1; i < closeButtons.length; i++) {
          closeButtons[i].remove();
        }
      }
    }
    
    // Ensure only one close button exists
    const allCloseButtons = document.querySelectorAll('#gallery-close');
    if (allCloseButtons.length > 1) {
      for (let i = 1; i < allCloseButtons.length; i++) {
        allCloseButtons[i].remove();
      }
    }
    
    // Re-get close button after cleanup
    const closeBtn = document.getElementById('gallery-close');
    if (closeBtn) {
      // Ensure button is clickable
      closeBtn.style.pointerEvents = 'auto';
      closeBtn.style.cursor = 'pointer';
      closeBtn.setAttribute('tabindex', '0');
    }
    
    // Add click handlers to gallery images
    document.querySelectorAll('[data-gallery-image]').forEach((element) => {
      element.addEventListener('click', () => {
        const imageIndex = parseInt(element.getAttribute('data-gallery-image') || '0');
        openGallery(imageIndex);
      });
    });

    // Modal controls - Use event delegation to ensure buttons work
    // Re-get close button to ensure we have the correct reference
    const closeBtnElement = document.getElementById('gallery-close');
    
    if (closeBtnElement) {
      // Ensure button is interactive
      closeBtnElement.style.pointerEvents = 'auto';
      closeBtnElement.style.cursor = 'pointer';
      closeBtnElement.setAttribute('tabindex', '0');
      
      // Add click event with multiple methods for reliability
      const handleClose = (e) => {
        e.preventDefault();
        e.stopPropagation();
        closeGallery(e);
        return false;
      };
      
      closeBtnElement.onclick = handleClose;
      closeBtnElement.addEventListener('click', handleClose, { capture: true });
      closeBtnElement.addEventListener('click', handleClose, { capture: false });
      
      // Also add touch event for mobile
      closeBtnElement.addEventListener('touchend', (e) => {
        e.preventDefault();
        e.stopPropagation();
        closeGallery(e);
        return false;
      }, { passive: false });
      
      // Add Enter key support for accessibility
      closeBtnElement.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          closeGallery(e);
        }
      });
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        prevImage();
      });
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        nextImage();
      });
    }
    
    // Also use event delegation on modal for close button
    if (modal) {
      modal.addEventListener('click', (e) => {
        // Check if click is on close button or its children
        const closeButton = e.target.closest('#gallery-close');
        if (closeButton) {
          e.preventDefault();
          e.stopPropagation();
          closeGallery(e);
          return false;
        }
        
        // Close on background click (but not on image or buttons)
        if (e.target === modal || e.target.id === 'gallery-modal') {
          // Don't close if clicking on image, buttons, or counter
          if (!e.target.closest('#gallery-main-image') && 
              !e.target.closest('#gallery-prev') && 
              !e.target.closest('#gallery-next') &&
              !e.target.closest('#gallery-counter') &&
              !e.target.closest('#gallery-caption')) {
            closeGallery(e);
          }
        }
      }, true);
    }

    // Background click handler is now above with event delegation

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (modal && !modal.classList.contains('hidden')) {
        if (e.key === 'Escape') {
          closeGallery();
        } else if (e.key === 'ArrowLeft') {
          prevImage();
        } else if (e.key === 'ArrowRight') {
          nextImage();
        }
      }
    });

    // Enhanced touch/swipe support for mobile (iPhone, Android, etc.)
    let touchStartX = 0;
    let touchEndX = 0;
    let touchStartY = 0;
    let touchEndY = 0;
    let touchStartTime = 0;

    if (modal) {
      // Prevent default touch behaviors that interfere with gallery
      modal.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        touchStartY = e.changedTouches[0].screenY;
        touchStartTime = Date.now();
      }, { passive: true });

      modal.addEventListener('touchmove', (e) => {
        // Allow vertical scrolling if needed, but prevent horizontal scroll
        const touch = e.changedTouches[0];
        const diffX = Math.abs(touch.screenX - touchStartX);
        const diffY = Math.abs(touch.screenY - touchStartY);
        
        // If horizontal swipe is more dominant, prevent default
        if (diffX > diffY && diffX > 10) {
          e.preventDefault();
        }
      }, { passive: false });

      modal.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        touchEndY = e.changedTouches[0].screenY;
        const touchDuration = Date.now() - touchStartTime;
        handleSwipe(touchDuration);
      }, { passive: true });

      // Prevent double-tap zoom on images
      let lastTap = 0;
      mainImage?.addEventListener('touchend', (e) => {
        const currentTime = new Date().getTime();
        const tapLength = currentTime - lastTap;
        if (tapLength < 300 && tapLength > 0) {
          e.preventDefault();
        }
        lastTap = currentTime;
      }, { passive: false });
    }

    function handleSwipe(duration) {
      const swipeThreshold = 50; // Minimum distance for swipe
      const swipeSpeed = 0.3; // Maximum duration for fast swipe (seconds)
      const diffX = touchStartX - touchEndX;
      const diffY = Math.abs(touchStartY - touchEndY);
      const isHorizontalSwipe = Math.abs(diffX) > diffY;
      const isFastSwipe = duration < swipeSpeed * 1000;
      
      // Only trigger if it's a horizontal swipe and not too slow
      if (isHorizontalSwipe && Math.abs(diffX) > swipeThreshold && isFastSwipe) {
        if (diffX > 0) {
          // Swipe left - next image
          nextImage();
        } else {
          // Swipe right - previous image
          prevImage();
        }
      }
    }

    // Handle orientation change on mobile
    let resizeTimer;
    window.addEventListener('orientationchange', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        if (modal && !modal.classList.contains('hidden')) {
          // Re-center image after orientation change
          updateGalleryImage();
          // Re-lock scroll after orientation change
          lockBodyScroll();
        }
      }, 100);
    });

    // Handle window resize for responsive adjustments
    window.addEventListener('resize', () => {
      if (modal && !modal.classList.contains('hidden')) {
        updateGalleryImage();
      }
    });
  });

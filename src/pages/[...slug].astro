---
import Layout2 from '../layouts/Layout2.astro';
import Navbar from "../components/Navbar";
import Stories from "./Stories.astro";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/Footer.astro";
import '../styles/css/global.css';

const currentPath = Astro.url.pathname;

import { urlForImage } from '../api/api';
import { getYear } from '../js/date';
import { getWordMonth } from '../js/date';
import { getDay } from '../js/date';

import { isURL } from '../js/regEx';

import { getArticle, getRelatedArticles } from '../api/api';
const articles = await getArticle();

const { slug } = Astro.params;
const article = articles.find((article) => article.slug.current === slug);
if (!article) return Astro.redirect("/404");
const { title, author, publishedAt, articleSubject, college, topic, mainImage, body, gallery } = article;

// Now we can safely use the title since it's been initialized
const siteUrl = Astro.site ? new URL(Astro.site).origin : 'https://msutcto.edu.ph';
const currentUrl = new URL(currentPath, siteUrl).href;
const shareTitle = `${title} | MSU TCTO`;

// Social media meta data
const articleDescription = body[0]?.children[0]?.text || `Read ${title} - Latest news and stories from MSU Tawi-Tawi College of Technology and Oceanography`;

// Lightweight extractive summary for the AI summary drawer
function generateSummary(bodyContent: any[], maxSentences = 3, maxChars = 420) {
  if (!Array.isArray(bodyContent)) return 'Summary not available.';

  const paragraphs = bodyContent
    .map((block: any) => {
      if (!block?.children) return '';
      const text = block.children
        .map((child: any) => (typeof child?.text === 'string' ? child.text : ''))
        .join(' ')
        .replace(/\s+/g, ' ')
        .trim();
      return text;
    })
    .filter((p: string) => p.length > 0);

  const combined = paragraphs.join(' ');
  if (!combined) return 'Summary not available.';

  const sentences = combined.split(/(?<=[.!?])\s+/).filter((s) => s.length > 0);
  const draft = (sentences.length > 0 ? sentences.slice(0, maxSentences) : paragraphs.slice(0, 2)).join(' ');

  if (draft.length <= maxChars) return draft;

  const truncated = draft.slice(0, maxChars);
  const lastSpace = truncated.lastIndexOf(' ');
  return `${truncated.slice(0, lastSpace > 50 ? lastSpace : maxChars)}...`;
}

const aiSummary = generateSummary(body);

// Force the use of the article's main image for social media sharing
let socialMediaImageUrl;
if (mainImage?.asset?.url) {
  // Create a high-quality social media optimized version
  socialMediaImageUrl = urlForImage(mainImage?.asset?.url)
    .width(1200)
    .height(630)
    .fit('crop')
    .quality(95)
    .format('jpg')
    .url();
  
  // Ensure it's an absolute URL - handle Sanity CDN URLs properly
  if (!socialMediaImageUrl.startsWith('http')) {
    if (socialMediaImageUrl.startsWith('//')) {
      // CDN URL starting with //
      socialMediaImageUrl = `https:${socialMediaImageUrl}`;
    } else if (socialMediaImageUrl.startsWith('/')) {
      // Relative URL
      socialMediaImageUrl = `${siteUrl}${socialMediaImageUrl}`;
    } else {
      // No protocol or slash
      socialMediaImageUrl = `https://${socialMediaImageUrl}`;
    }
  }
} else {
  // Only use logo if absolutely no image is available
  socialMediaImageUrl = `${siteUrl}/images/Official MSU-TCTO logo-01.png`;
}

// Final absolute URL - remove cache busting which can cause issues with social media platforms
const cacheBustingImageUrl = socialMediaImageUrl;

// Debug logging for development
console.log('Social Media Image Debug:', {
  hasMainImage: !!mainImage?.asset?.url,
  mainImageUrl: mainImage?.asset?.url,
  socialMediaImageUrl,
  finalImageUrl: cacheBustingImageUrl,
  articleTitle: title,
  siteUrl
});

const relatedArticles = await getRelatedArticles(article._id, articleSubject._id, 3);

// Extract all images for gallery (mainImage + gallery array + images from body)
const galleryImages: Array<{url: string, caption?: string, alt?: string}> = [];
const seenImageUrls = new Set<string>();

// Add main image first
if (mainImage?.asset?.url) {
  const mainImageUrl = urlForImage(mainImage?.asset?.url).width(1600).quality(90).url();
  if (!seenImageUrls.has(mainImageUrl)) {
    seenImageUrls.add(mainImageUrl);
    galleryImages.push({
      url: mainImageUrl,
      caption: mainImage?.caption || title,
      alt: title
    });
  }
}

// Add gallery images (if gallery field exists and has images)
if (gallery && Array.isArray(gallery) && gallery.length > 0) {
  gallery.forEach((galleryImage: any) => {
    if (galleryImage?.asset?.url) {
      const imageUrl = urlForImage(galleryImage?.asset?.url).width(1600).quality(90).url();
      // Avoid duplicates
      if (!seenImageUrls.has(imageUrl)) {
        seenImageUrls.add(imageUrl);
        galleryImages.push({
          url: imageUrl,
          caption: galleryImage.caption || '',
          alt: galleryImage.alt || title
        });
      }
    }
  });
}

// Extract images from body content blocks (optional - if you want to include body images)
body.forEach((block: any) => {
  // Check if this block has an image asset (handles both text blocks with images and image blocks)
  if (block?.asset?.url) {
    const imageUrl = urlForImage(block?.asset?.url).width(1600).quality(90).url();
    // Avoid duplicates
    if (!seenImageUrls.has(imageUrl)) {
      seenImageUrls.add(imageUrl);
      galleryImages.push({
        url: imageUrl,
        caption: block.caption || '',
        alt: title
      });
    }
  }
});

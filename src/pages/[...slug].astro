import Layout2 from '../layouts/Layout2.astro';
import Navbar from "../components/Navbar";
import Stories from "./Stories.astro";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/Footer.astro";
import '../styles/css/global.css';

const currentPath = Astro.url.pathname;

import { urlForImage } from '../api/api';
import { getYear } from '../js/date';
import { getWordMonth } from '../js/date';
import { getDay } from '../js/date';

import { isURL } from '../js/regEx';

// Helper function to extract YouTube video ID from URL
const getYouTubeVideoId = (url: string): string | null => {
  try {
    const urlObj = new URL(url);
    
    // Handle youtube.com/watch?v=VIDEO_ID
    if (urlObj.hostname.includes('youtube.com') && urlObj.pathname === '/watch') {
      return urlObj.searchParams.get('v');
    }
    
    // Handle youtu.be/VIDEO_ID
    if (urlObj.hostname === 'youtu.be') {
      return urlObj.pathname.slice(1);
    }
    
    // Handle youtube.com/embed/VIDEO_ID
    if (urlObj.hostname.includes('youtube.com') && urlObj.pathname.startsWith('/embed/')) {
      return urlObj.pathname.split('/')[2];
    }
    
    // Handle youtube.com/v/VIDEO_ID
    if (urlObj.hostname.includes('youtube.com') && urlObj.pathname.startsWith('/v/')) {
      return urlObj.pathname.split('/')[2];
    }
    
    return null;
  } catch {
    return null;
  }
};

// Helper function to check if URL is a YouTube link
const isYouTubeURL = (url: string): boolean => {
  return getYouTubeVideoId(url) !== null;
};

import { getArticle, getRelatedArticles } from '../api/api';
const articles = await getArticle();

const { slug } = Astro.params;
if (!articles || !Array.isArray(articles) || articles.length === 0) {
  return Astro.redirect("/404");
}

const article = articles.find((article) => article?.slug?.current === slug);
if (!article) return Astro.redirect("/404");
const { title, author, publishedAt, articleSubject, mainImage, body, gallery } = article;

// Ensure body and gallery are always arrays (handle null/undefined cases)
// Note: Gallery is required with min(1) in Sanity schema, but we still check for safety
// Filter out null/undefined values from arrays
const safeBody = (body && Array.isArray(body)) ? body.filter((b: any) => b != null) : [];
const safeGallery = (gallery && Array.isArray(gallery)) ? gallery.filter((g: any) => g != null) : [];

// Now we can safely use the title since it's been initialized
const siteUrl = Astro.site ? new URL(Astro.site).origin : 'https://msutcto.edu.ph';
const currentUrl = new URL(currentPath, siteUrl).href;
const shareTitle = `${title} | MSU TCTO`;

// Social media meta data
// Safely extract description from first text block in body
let articleDescription = `Read ${title} - Latest news and stories from MSU Tawi-Tawi College of Technology and Oceanography`;
if (safeBody && safeBody.length > 0) {
  const firstBlock = safeBody[0];
  if (firstBlock && firstBlock.children && Array.isArray(firstBlock.children)) {
    // Filter out null children and find first valid child with text
    const validChildren = firstBlock.children.filter((c: any) => c != null && c.text != null);
    if (validChildren.length > 0) {
      const firstChild = validChildren[0];
      if (firstChild && firstChild.text && typeof firstChild.text === 'string') {
        articleDescription = firstChild.text;
      }
    }
  }
}

// Lightweight extractive summary for the AI summary drawer
function generateSummary(bodyContent: any[], maxSentences = 3, maxChars = 420) {
  if (!Array.isArray(bodyContent) || bodyContent.length === 0) return 'Summary not available.';

  const paragraphs = bodyContent
    .map((block: any) => {
      if (!block || !block.children || !Array.isArray(block.children) || block.children.length === 0) return '';
      // Filter out null children first
      const validChildren = block.children.filter((c: any) => c != null);
      if (validChildren.length === 0) return '';
      
      const text = validChildren
        .map((child: any) => {
          if (!child || !child.text || typeof child.text !== 'string') return '';
          return child.text;
        })
        .filter((t: string) => t && typeof t === 'string' && t.length > 0)
        .join(' ')
        .replace(/\s+/g, ' ')
        .trim();
      return text;
    })
    .filter((p: string) => p && typeof p === 'string' && p.length > 0);

  if (!Array.isArray(paragraphs) || paragraphs.length === 0) return 'Summary not available.';

  const combined = paragraphs.join(' ');
  if (!combined || combined.trim().length === 0) return 'Summary not available.';

  const sentences = combined.split(/(?<=[.!?])\s+/).filter((s) => s && s.length > 0);
  if (!Array.isArray(sentences) || sentences.length === 0) {
    // Fallback to paragraphs if no sentences found
    if (paragraphs.length > 0) {
      const draft = paragraphs.slice(0, 2).join(' ');
      return draft.length <= maxChars ? draft : `${draft.slice(0, maxChars)}...`;
    }
    return 'Summary not available.';
  }

  const draft = (sentences.length > 0 ? sentences.slice(0, maxSentences) : (paragraphs.length > 0 ? paragraphs.slice(0, 2) : [])).join(' ');
  if (!draft || draft.length === 0) return 'Summary not available.';

  if (draft.length <= maxChars) return draft;

  const truncated = draft.slice(0, maxChars);
  const lastSpace = truncated.lastIndexOf(' ');
  return `${truncated.slice(0, lastSpace > 50 ? lastSpace : maxChars)}...`;
}

const aiSummary = generateSummary(safeBody);

// Force the use of the article's main image for social media sharing
let socialMediaImageUrl;
if (mainImage?.asset) {
  // Create a high-quality social media optimized version
  socialMediaImageUrl = urlForImage(mainImage.asset)
    .width(1200)
    .height(630)
    .fit('crop')
    .quality(95)
    .format('jpg')
    .url();
  
  // Ensure it's an absolute URL - handle Sanity CDN URLs properly
  if (!socialMediaImageUrl.startsWith('http')) {
    if (socialMediaImageUrl.startsWith('//')) {
      // CDN URL starting with //
      socialMediaImageUrl = `https:${socialMediaImageUrl}`;
    } else if (socialMediaImageUrl.startsWith('/')) {
      // Relative URL
      socialMediaImageUrl = `${siteUrl}${socialMediaImageUrl}`;
    } else {
      // No protocol or slash
      socialMediaImageUrl = `https://${socialMediaImageUrl}`;
    }
  }
} else {
  // Only use logo if absolutely no image is available
  socialMediaImageUrl = `${siteUrl}/images/Official MSU-TCTO logo-01.png`;
}

// Final absolute URL - remove cache busting which can cause issues with social media platforms
const cacheBustingImageUrl = socialMediaImageUrl;

// Debug logging for development
console.log('Social Media Image Debug:', {
  hasMainImage: !!mainImage?.asset?.url,
  mainImageUrl: mainImage?.asset?.url,
  socialMediaImageUrl,
  finalImageUrl: cacheBustingImageUrl,
  articleTitle: title,
  siteUrl
});

const relatedArticles = (article?._id && articleSubject && articleSubject._id) 
  ? (await getRelatedArticles(article._id, articleSubject._id, 3)) || []
  : [];

// Extract all images for gallery (mainImage + gallery array + images from body)
const galleryImages: Array<{url: string, thumbnailUrl: string, caption?: string, alt?: string}> = [];
const seenImageUrls = new Set<string>();

// Add main image first
if (mainImage?.asset) {
  try {
    const fullUrl = urlForImage(mainImage.asset).width(1600).quality(90).url();
    if (fullUrl && !seenImageUrls.has(fullUrl)) {
      seenImageUrls.add(fullUrl);
      const thumbUrl = urlForImage(mainImage.asset).width(400).height(400).fit('crop').quality(85).url();
      if (thumbUrl) {
        galleryImages.push({
          url: fullUrl,
          thumbnailUrl: thumbUrl,
          caption: mainImage?.caption || title,
          alt: title
        });
      }
    }
  } catch (error) {
    console.warn('Error processing main image for gallery:', error);
  }
}

// Add gallery images (if gallery field exists and has images)
if (safeGallery && safeGallery.length > 0) {
  safeGallery.forEach((galleryImage: any) => {
    if (galleryImage?.asset) {
      try {
        const fullUrl = urlForImage(galleryImage.asset).width(1600).quality(90).url();
        if (fullUrl && !seenImageUrls.has(fullUrl)) {
          seenImageUrls.add(fullUrl);
          const thumbUrl = urlForImage(galleryImage.asset).width(400).height(400).fit('crop').quality(85).url();
          if (thumbUrl) {
            galleryImages.push({
              url: fullUrl,
              thumbnailUrl: thumbUrl,
              caption: galleryImage.caption || '',
              alt: galleryImage.alt || title
            });
          }
        }
      } catch (error) {
        console.warn('Error processing gallery image:', error);
      }
    }
  });
}

// Extract images from body content blocks (optional - if you want to include body images)
if (safeBody && safeBody.length > 0) {
  safeBody.forEach((block: any) => {
    // Skip null blocks
    if (!block) return;
    
    // Check if this block has an image asset (handles both text blocks with images and image blocks)
    if (block?.asset) {
      try {
        const fullUrl = urlForImage(block.asset).width(1600).quality(90).url();
        if (fullUrl && !seenImageUrls.has(fullUrl)) {
          seenImageUrls.add(fullUrl);
          const thumbUrl = urlForImage(block.asset).width(400).height(400).fit('crop').quality(85).url();
          if (thumbUrl) {
            galleryImages.push({
              url: fullUrl,
              thumbnailUrl: thumbUrl,
              caption: block.caption || '',
              alt: title
            });
          }
        }
      } catch (error) {
        console.warn('Error processing body image for gallery:', error);
      }
    }
  });
}


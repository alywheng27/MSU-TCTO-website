---
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import '../../styles/css/global.css';
import '../../styles/css/globalanimate.css';

// Image imports
import scholarshipHero from '../../assets/images/scholarship-hero.jpg';
import marineBiology from '../../assets/images/marine-biology.png';
import badjaoStudents from '../../assets/images/badjao-students.png';
import campusView from '../../assets/images/campus-view.jpg';
import studentGroup from '../../assets/images/student-group.jpg';

const currentPath = Astro.url.pathname;
---

<Layout title="MSU Tawi-Tawi | Scholarships & Grants">
	<main class="font-sans antialiased">

				<!-- Navigation -->
				<Navbar path={currentPath} client:visible />
		<!-- Hero Section -->
<section class="relative h-screen min-h-[600px] w-full overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-t from-[#61063B]/90 via-[#61063B]/50 to-transparent z-10"></div>
    <img 
        src={scholarshipHero.src} 
        alt="MSU Tawi-Tawi students on campus" 
        class="w-full h-full object-cover object-center"
        loading="eager"
        width={1920}
        height={1080}
    />
    <div class="absolute inset-0 flex items-center justify-center z-20 px-4">
        <div class="text-center max-w-4xl animate-fade-in">
            <h1 class="text-white text-4xl md:text-6xl font-bold mb-6 drop-shadow-lg">
                Scholarships & Grants
            </h1>
            <p class="text-white text-xl md:text-2xl font-medium mb-8 drop-shadow-md max-w-2xl mx-auto leading-relaxed">
                Discover financial support opportunities at MSU Tawi-Tawi College of Technology and Oceanography

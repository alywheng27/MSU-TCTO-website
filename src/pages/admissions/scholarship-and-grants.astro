---
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import '../../styles/css/global.css';
import '../../styles/css/globalanimate.css';

// Image imports
import scholarshipHero from '../../assets/images/scholarship-hero.jpg';
import marineBiology from '../../assets/images/msucampus.jpg';
import badjaoStudents from '../../assets/images/grad.jpg';
import campusView from '../../assets/images/campus-view.jpg';
import studentGroup from '../../assets/images/student-group.jpg';

const currentPath = Astro.url.pathname;
---

<Layout title="MSU Tawi-Tawi | Scholarships & Grants">
	<main class="font-sans antialiased dark:bg-gray-900">

				<!-- Navigation -->
				<Navbar path={currentPath} client:visible />
		<!-- Hero Section -->
<section class="relative h-screen min-h-[600px] w-full overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-t from-[#61063B]/90 via-[#61063B]/50 to-transparent z-10"></div>
    <img 
        src={scholarshipHero.src} 
        alt="MSU Tawi-Tawi students on campus" 
        class="w-full h-full object-cover object-center"
        loading="eager"
        width={1920}
        height={1080}
    />
    <div class="absolute inset-0 flex items-center justify-center z-20 px-4">
        <div class="text-center max-w-4xl animate-fade-in">
            <h1 class="text-white text-4xl md:text-6xl font-bold mb-6 drop-shadow-lg">
                Scholarships & Grants
            </h1>
            <p class="text-white text-xl md:text-2xl font-medium mb-8 drop-shadow-md max-w-2xl mx-auto leading-relaxed">
                Discover financial support opportunities at MSU Tawi-Tawi College of Technology and Oceanography
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <a 
                    href="#scholarship-types" 
                    class="bg-msu-main-color hover:bg-msu-deep-ocean text-white font-bold py-3 px-8 rounded-full transition-all duration-300 inline-block hover-grow"
                >
                    Explore Programs
                </a>
                <a 
                    href="#application-process" 
                    class="bg-transparent border-2 border-white hover:bg-white/20 text-white font-bold py-3 px-8 rounded-full transition-all duration-300 inline-block hover-grow"
                >
                    How to Apply
                </a>
            </div>
        </div>
    </div>
    <div class="absolute bottom-8 left-0 right-0 flex justify-center z-20 animate-bounce">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>
		<!-- Stats Bar -->
		<section class="bg-msu-main-color text-white py-8">
			<div class="max-w-7xl mx-auto px-2 grid grid-cols-2 md:grid-cols-2 gap-2 text-center">
				<div class="p-4">
					<div class="text-3xl md:text-4xl font-bold mb-2">15+</div>
					<div class="text-sm md:text-base">Scholarship Programs</div>
				</div>
				<div class="p-4">
					<div class="text-3xl md:text-4xl font-bold mb-2">500+</div>
					<div class="text-sm md:text-base">Students Supported</div>
				</div>
				<!-- <div class="p-4">
					<div class="text-3xl md:text-4xl font-bold mb-2">₱5M+</div>
					<div class="text-sm md:text-base">Annual Funding</div>
				</div>
				<div class="p-4">
					<div class="text-3xl md:text-4xl font-bold mb-2">100%</div>
					<div class="text-sm md:text-base">Merit-Based</div>
				</div>
			</div> -->
		</section>

		<!-- Scholarship Overview Section -->
		<section id="scholarship" class="bg-white dark:bg-gray-900 py-20 px-4 md:px-[12.5%]">
			<div class="max-w-7xl mx-auto">
				<div class="text-center mb-16 animate-fade-in">
					<span class="text-msu-main-color dark:text-yellow-400 font-semibold mb-2 block">FINANCIAL SUPPORT</span>
					<h2 class="text-3xl md:text-4xl font-bold text-msu-deep-ocean dark:text-white mb-4">
						Scholarship and Grant Programs
					</h2>
					<div class="w-24 h-1 bg-msu-main-color dark:bg-yellow-400 mx-auto mb-6"></div>
					<p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
						Comprehensive financial assistance to empower students in achieving academic excellence
					</p>
				</div>

				<div class="grid md:grid-cols-2 gap-12 mb-20">
					<!-- Externally Funded Card -->
					<div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover-grow">
						<div class="h-48 overflow-hidden relative">
							<img 
								src={marineBiology.src}
								alt="Marine biology students" 
								class="w-full h-full object-cover"
								width={600}
								height={400}
							/>
							<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
								<h3 class="text-2xl font-bold text-white">Externally-Funded</h3>
							</div>
						</div>
						<div class="p-8">
							<p class="text-gray-700 dark:text-gray-300 mb-6 leading-relaxed">
								Special scholarships for Fisheries, Marine Biology, Environmental Science and Badjao students designed to attract more enrollees to our mandated programs and support indigenous communities.
							</p>
							<p class="text-gray-600 dark:text-gray-400 text-sm italic">
								Funded from the P5,000,000 allocated by the national government beginning AY 2014-15 (R.A. 10633).
							</p>
						</div>
					</div>

					<!-- Internally Funded Card -->
					<div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover-grow">
						<div class="h-48 overflow-hidden relative">
							<img 
								src={badjaoStudents.src}
								alt="Badjao students" 
								class="w-full h-full object-cover"
								width={600}
								height={400}
							/>
							<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
								<h3 class="text-2xl font-bold text-white">Internally-Funded</h3>
							</div>
						</div>
						<div class="p-8">
							<ul class="space-y-3 mb-6">
								<li class="flex items-start">
									<svg class="w-5 h-5 text-msu-main-color dark:text-yellow-400 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700 dark:text-gray-300">Academic Scholarship</span>
								</li>
								<li class="flex items-start">
									<svg class="w-5 h-5 text-msu-main-color dark:text-yellow-400 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700 dark:text-gray-300">MSU Tawi-Tawi Scholarship for Science and Mathematics (SSM)</span>
								</li>
								<li class="flex items-start">
									<svg class="w-5 h-5 text-msu-main-color dark:text-yellow-400 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700 dark:text-gray-300">Cultural Community Grant (CCG)</span>
								</li>
								<li class="flex items-start">
									<svg class="w-5 h-5 text-msu-main-color dark:text-yellow-400 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700 dark:text-gray-300">Skill/Talent Study Grant (Tambuli Cultural Troupe, Band members and Athletes)</span>
								</li>
							</ul>
							<p class="text-gray-600 dark:text-gray-400 text-sm">
								Scholarship policies governed by BOR RES #66, 2013
							</p>
						</div>
					</div>
				</div>

				<!-- General Policies Section -->
				<div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8 md:p-12 shadow-md animate-fade-in border border-gray-200 dark:border-gray-600">
					<div class="max-w-4xl mx-auto">
						<h3 class="text-2xl md:text-3xl font-bold text-msu-deep-ocean dark:text-white mb-6 text-center">
							General Policies On Scholarships And Grants
						</h3>
						<p class="text-center font-medium text-gray-700 dark:text-gray-300 mb-8">
							(TERTIARY LEVEL)
						</p>
						<p class="text-gray-700 dark:text-gray-300 mb-6 leading-relaxed">
							Privileges granted to a select group of students in the campus are generally classified as scholarships or grants. A scholarship refers to privileges obtained on the basis of one's high score in the MSU System Admission and Scholarship Examination (SASE) (administered annually throughout Mindanao) or very good scholastic performance. A grant, while not disregarding such factors, is based more on other attributes such as special skills or one's ethnic origin.
						</p>
						<div class="text-center mt-8">
							<a 
								href="#" 
								class="inline-flex items-center border border-msu-main-color dark:border-yellow-400 text-msu-main-color dark:text-yellow-400 hover:bg-msu-main-color dark:hover:bg-yellow-400 hover:text-white dark:hover:text-gray-900 px-6 py-3 rounded-full transition-colors duration-300 hover-grow"
							>
								<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
								</svg>
								Download Full Policy Document
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Scholarship Types Section -->
		<section id="scholarship-types" class="py-20 bg-gradient-to-b from-gray-50 dark:from-gray-800 to-white dark:to-gray-900">
			<div class="max-w-7xl mx-auto px-4 md:px-[12.5%]">
				<div class="text-center mb-16 animate-fade-in">
					<span class="text-msu-main-color dark:text-yellow-400 font-semibold mb-2 block">OPPORTUNITIES</span>
					<h2 class="text-3xl md:text-4xl font-bold text-msu-deep-ocean dark:text-white mb-4">
						Available Scholarship Programs
					</h2>
					<div class="w-24 h-1 bg-msu-main-color dark:bg-yellow-400 mx-auto mb-6"></div>
					<p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
						Explore our comprehensive range of scholarship and grant opportunities
					</p>
				</div>
				<div class="text-center mb-8">
					<h2 class="text-3xl font-bold text-msu-deep-ocean dark:text-white">Scholarships and Grants</h2>
					<p class="text-gray-600 dark:text-gray-300 mt-4 max-w-3xl mx-auto">Privileges granted to a select group of students in the MSU-Tawi-Tawi campus are generally classified as scholarships or grants. A scholarship refers to privileges obtained on the basis of one's a sufficiently high score in the Mindanao State University System Admission and Scholarship Examination (MSU-SASE) or an academic performance deemed at least "very good". A grant, requiring only a minimum level of scholastic proficiency, is based more on other attributes such as special skills or talents, indigent family background, or even one's ethnic origin.</p>
				</div>
				
				<!-- Complete List of Scholarships and Grants -->
				<div class="bg-white dark:bg-gray-800 rounded-xl p-8 md:p-12 shadow-lg border border-gray-200 dark:border-gray-600">
					<h3 class="text-2xl font-bold text-msu-deep-ocean dark:text-white mb-8 text-center">Complete List of Scholarships and Grants</h3>
					
					<div class="grid md:grid-cols-2 gap-8">
						<!-- Left Column -->
						<div class="space-y-6">
							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Academic Scholarship for Science and Mathematics Courses (SSM)</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">For students excelling in STEM fields</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Academic Scholarship for Non-Science/Mathematics Courses (NSM)</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">For students in non-STEM programs</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Special Muslim Grant (SMG)</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">Supporting Muslim students in their academic pursuits</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Cultural Community Grant (CCG)</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">For students from cultural communities</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Badjao Grant</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">Supporting indigenous Badjao students</p>
								</div>
							</div>
						</div>

						<!-- Right Column -->
						<div class="space-y-6">
							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Talent/Skill Study Grant</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">For students with exceptional talents and skills</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Fisheries Technology Study Grant</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">For students in fisheries technology programs</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Student Assistantship Grant</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">Work-study opportunities for students</p>
								</div>
							</div>

							<div class="flex items-start group">
								<div class="bg-msu-main-color dark:bg-yellow-400 rounded-full p-1 mr-4 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-800 dark:text-gray-200 group-hover:text-msu-main-color dark:group-hover:text-yellow-400 transition-colors duration-300">Other Student Grants</h4>
									<p class="text-gray-600 dark:text-gray-300 text-sm mt-1">Additional grant opportunities</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Additional Grant Details -->
					<div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-600">
						<h4 class="text-xl font-semibold text-msu-deep-ocean dark:text-white mb-6">Other Student Grants Include:</h4>
						<div class="bg-gray-50 dark:bg-gray-700 p-6 rounded-lg">
							<div class="flex items-start">
								<svg class="w-5 h-5 text-msu-main-color dark:text-yellow-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<div>
									<h5 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">On-the-Job Training (OJT) Grant</h5>
									<p class="text-gray-600 dark:text-gray-300 text-sm">Financial support for students during their internship and practical training periods</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Application Process Section -->
		<section id="application-process" class="py-20 bg-white dark:bg-gray-900">
			<div class="max-w-7xl mx-auto px-4 md:px-[12.5%]">
				<div class="text-center mb-16">
					<span class="text-msu-main-color dark:text-yellow-400 font-semibold mb-2 block">HOW TO APPLY</span>
					<h2 class="text-3xl md:text-4xl font-bold text-msu-deep-ocean dark:text-white mb-4">
						Application Process
					</h2>

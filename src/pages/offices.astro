---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar";
import ChancellorMessage from "../components/ChancellorMessage.astro";
import MainVideo from "../components/MainVideo.astro";
import FooterNav from "../components/FooterNav.astro";
import Footer from "../components/Footer.astro";
import FacultyAndStaff from "../components/FacultyAndStaff";
import '../styles/css/global.css';

const currentPath = Astro.url.pathname;
---

<Layout title="MSU | Tawi-Tawi College of Technology and Oceanography">
	<main>
		<Navbar path={currentPath} client:visible />
<!-- fold 02 -->
        <div class="bg-msu-deep-ocean w-full   ">
            <div class="text-center xl:px-[12.5%] xs:px-[3.85%]">
                <h4 class="headings xl:h4 xs:h5 text-white-pure xl:px-[20.5%] ">A warm welcome awaits you</h4>
                <div class="flex justify-center xl:ml-0 xs:ml-0 xl:mt-[20px] xs:mt-10 ">
                    <p class="paragraph xl:p1 xs:p2 xl:w-[840px] text-titanium  text-center ">
                        Wherever you go, our student-centered approach is manifested in all our offices. We believe that comfort is critical to our students' success.
                    </p>
                    
                </div>
                <!-- <div class="bg-gradient-ocean h-20 rotate-180 xs:block xl:hidden"></div> -->
            </div>
            <div class="flex xl:flex-row justify-center xl:mt-[63px] xs:mt-[48px] xs:px-[3.85%]">
                <div class="xs:mb-[61px] xl:mb-0">
                    <img src="/images/ilab.png" class="w-full" alt="">
                </div>
                <div class="xs:mb-[61px] xl:mb-0">
                    <img src="/images/seaweed_cultivars.png" class="w-full" alt="">
                </div>
                <div class="xs:mb-[61px] xl:mb-0 xl:block xs:hidden">
                    <img src="/images/administrative_office/image2.png" class="w-full" alt="">
                </div>
            </div>
            <div class="grid xl:grid-cols-3 xs:grid-cols-2 justify-items-center xl:px-[12.5%] pb-[80px] xl:pt-[27px] xs:pt[66px]">
                <div class="p-5 max-w-[360px]">
                    <h2 class="flex-col text-center headings xl:h2 xs:h4 text-white-pure">500+</h2>
                    <p class="paragraph xl:p1 xs:p2 text-titanium mt-[5px] text-center">Smart facilities</p>
                </div>
                <div class="p-5 max-w-[360px]">
                    <h2 class="flex-col text-center headings  xl:h2 xs:h4 text-white-pure">120+</h2>
                    <p class="paragraph xl:p1 xs:p2 text-titanium mt-[5px] text-center">On going local research for biodiversity</p>
                </div>
                <div class="p-5 max-w-[360px] xl:block xs:hidden">
                    <h2 class="flex-col text-center headings  xl:h2 xs:h4 text-white-pure">50+</h2>
                    <p class="paragraph xl:p1 xs:p2 text-titanium mt-[5px] text-center">Multiple programs for the ocean</p>
                </div>
            </div>

            <div class="mb-[34px] xl:hidden  xs:block ">
                <div class="p-5 item-center">
                    <h2 class="flex-col text-center headings  xl:h2 xs:h4 text-white-pure">50+</h2>
                    <p class="paragraph xl:p1 xs:p2 text-titanium mt-[5px] text-center">Multiple programs for the ocean</p>
                </div>
            </div>'
        
        </div>
<!-- end fold 02 -->
		
	

<!-- Chancellor Message -->
    <ChancellorMessage />
<!-- end Chancellor Message -->

<!-- Administrative Offices -->
        <div id="administrative" class=" bg-white-pure xl:pt-[80px] xs:pt-[80px] xl:pb-[60px] xs:pb-[80px] ">
            
            <div class="text-center xs:px-[66px]">
                <h3 class="headings xl:h3 xs:h4 text-msu-maroon xl:mb-[80px] xs:mb-[64px]">Administrative Offices</h3>
                <div class="flex xs:flex-col xl:flex-row xl:gap-[240px] xs:gap-[85px] justify-center">
                    <div class="flex flex-col gap-[20px] justify-top xl:ml-0 xs:ml-0 xl:mt-0">
                        <h3 class="headings xl:h4 xs:h5 text-msu-maroon xl:mb-[40px] xs:mb-[42px]">Chancellor</h3>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">OFFICE OF THE CAMPUS SECRETARY</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">BUDGET MANAGEMENT OFFICE</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">INTERNAL CONTROL & AUDIT UNIT</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">OFFICE OF LEGAL SERVICES</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">OFFICE OF INFORMATION, PRESS, & PUBLICATIONS</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">MANILA INFORMATION & LIASON OFFICE</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">INFORMATION & COMMUNICATIONS TECHNOLOGY OFFICE</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">SPORTS DEVELOPMENT OFFICE</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">CULTURAL AFFAIRS & COMMUNITY RELATIONS OFFICE</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">INSTITUTE FOR PEACE & DEVELOPMENT IN MINDANAO</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">OFFICE OF INTERNATIONAL LINKAGES</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">SPECIAL PROJECTS</p>
                        
                    </div>
                    <div class="flex flex-col gap-[20px] justify-top xl:ml-0 xs:ml-0 xl:mt-0 ">
                        <h3 class="headings xl:h4 xs:h5 text-msu-maroon xl:mb-[40px] xs:mb-[42px]">Vice Chancellor</h3>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">VICE-CHANCELLOR FOR RESEARCH, INNOVATION, DEVELOPMENT & EXTENSION</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">VICE-CHANCELLOR FOR ACADEMIC AFFAIRS</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">ASSISTANT VICE-CHANCELLOR FOR SECONDARY EDUCATION</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">VICE-CHANCELLOR FOR ADMINISTRATION & FINANCE</p>
                        <p class="paragraph xl:p2 xs:p2 text-black-pure text-center">VICE-CHANCELLOR FOR PLANNING & DEVELOPMENT</p>
                        
                    </div>

                </div>
            </div>
			<div class="text-center pb-[20px] pt-20">
				<a href="https://drive.google.com/file/d/10AHPJVf1ePe2KGkAn9ynYndbc9Rx2yes/view?usp=drive_link" class="bg-transparent border border-msu-maroon paragraph  xl:p1 xs:p2  gap-10 text-msu-maroon py-[10.5px] px-[60px] rounded-[40px]">View More</a>
			
			</div>
           
        </div>
<!-- end Academic Offices -->

<!-- Academic Offices -->
        <div id="academic" class=" bg-msu-deep-ocean xl:pt-[80px] xs:pt-[80px] xl:pb-[60px] xs:pb-[80px] ">
            
            <div class="text-center xs:px-[66px]">
                <h3 class="headings xl:h3 xs:h4 text-white-pure ">Academic Offices</h3>
                <div class="flex flex-col gap-[20px] justify-center xl:ml-0 xs:ml-0 xl:mt-0 xs:mt-10 pt-10 ">
                    <p class="paragraph xl:p2 xs:p2 text-white-pure text-center">COLLEGE OF ARTS AND SCIENCES</p>
                    <p class="paragraph xl:p2 xs:p2 text-white-pure text-center">COLLEGE OF ISLAMIC & ARABIC STUDIES</p>
                    <p class="paragraph xl:p2 xs:p2 text-white-pure text-center">COLLEGE OF EDUCATION</p>
                    <p class="paragraph xl:p2 xs:p2 text-white-pure text-center">COLLEGE OF FISHERIES</p>
                    <p class="paragraph xl:p2 xs:p2 text-white-pure text-center">INSTITUTE OF INFORMATION & COMMUNICATIONS TECHNOLOGY</p>
                    <p class="paragraph xl:p2 xs:p2 text-white-pure text-center">INSTITUTE OF OCEANOGRAPHY & ENVIRONMENTAL SCIENCE</p>
                    
                </div>
            </div>
           
        </div>
<!-- end Academic Offices -->

<!-- Faculty -->

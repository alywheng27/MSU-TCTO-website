	const departmentFacultyButtons = Array.from(document.querySelectorAll('.department-faculty-toggle')) as HTMLButtonElement[];
	const facultyGrid = document.getElementById('facultyGrid');
	
	// Ensure all department faculty cards are hidden by default on page load
	if (facultyGrid) {
		const allDepartmentCards = facultyGrid.querySelectorAll('.department-faculty-cards') as NodeListOf<HTMLElement>;
		allDepartmentCards.forEach((container) => {
			container.classList.add('hidden');
			container.style.display = 'none';
		});
	}
	
	departmentFacultyButtons.forEach((button) => {
		button.addEventListener('click', function() {
			const department = button.dataset.department || '';
			const isActive = button.getAttribute('aria-pressed') === 'true';
			const newIsActive = !isActive;
			
			button.setAttribute('aria-pressed', newIsActive ? 'true' : 'false');
			
			// Update button text
			const buttonText = button.querySelector('.text-left');
			if (buttonText) {
				const showText = buttonText.querySelector('span:first-child');
				if (showText) {
					showText.textContent = newIsActive ? 'Hide' : 'Show';
				}
			}
			
			const icon = button.querySelector('.department-button-icon') as SVGElement | null;
			if (icon) {
				icon.style.transition = 'transform 0.2s ease-in-out';
				icon.style.transform = newIsActive ? 'rotate(180deg)' : '';
			}
			
			const banner = button.closest('.faculty-department-banner');
			const bannerContent = banner?.querySelector('.faculty-banner-content') as HTMLElement | null;
			if (bannerContent) {
				const defaultDisplay = bannerContent.dataset.defaultDisplay || (bannerContent.classList.contains('grid') ? 'grid' : 'block');
				if (!bannerContent.dataset.defaultDisplay) {
					bannerContent.dataset.defaultDisplay = defaultDisplay;
				}
				if (newIsActive) {
					bannerContent.classList.remove('hidden');
					bannerContent.style.display = defaultDisplay;
				} else {
					bannerContent.classList.add('hidden');
					bannerContent.style.display = 'none';
				}
			}
			
			// Toggle faculty cards below the banner - only for the specific department
			if (facultyGrid) {
				// Hide all other department faculty cards first (optional - comment out if you want multiple departments visible)
				const allDepartmentCards = facultyGrid.querySelectorAll('.department-faculty-cards') as NodeListOf<HTMLElement>;
				allDepartmentCards.forEach((container) => {
					const containerDepartment = container.getAttribute('data-department');
					if (containerDepartment && containerDepartment !== department) {
						container.classList.add('hidden');
						container.style.display = 'none';
						// Also reset the button state for other departments
						const otherButton = Array.from(departmentFacultyButtons).find(btn => btn.dataset.department === containerDepartment);
						if (otherButton && otherButton.getAttribute('aria-pressed') === 'true') {
							otherButton.setAttribute('aria-pressed', 'false');
							const otherButtonText = otherButton.querySelector('.text-left');
							if (otherButtonText) {
								const otherShowText = otherButtonText.querySelector('span:first-child');
								if (otherShowText) {
									otherShowText.textContent = 'Show';
								}
							}
							const otherIcon = otherButton.querySelector('.department-button-icon') as SVGElement | null;
							if (otherIcon) {
								otherIcon.style.transform = '';
							}
							const otherBanner = otherButton.closest('.faculty-department-banner');
							const otherBannerContent = otherBanner?.querySelector('.faculty-banner-content') as HTMLElement | null;
							if (otherBannerContent) {
								otherBannerContent.classList.add('hidden');
								otherBannerContent.style.display = 'none';
							}
						}
					}
				});
				
				// Show/hide the specific department's faculty cards
				const facultyCards = facultyGrid.querySelectorAll(`.department-faculty-cards[data-department="${department}"]`) as NodeListOf<HTMLElement>;
				facultyCards.forEach((cardsContainer) => {
					if (newIsActive) {
						cardsContainer.classList.remove('hidden');
						cardsContainer.style.display = 'grid';
					} else {
						cardsContainer.classList.add('hidden');
						cardsContainer.style.display = 'none';
					}
				});
			}
		});
	});
});

// Alumni Carousel Functionality
let currentAlumniSlide = 0;
let alumniAutoPlay = true;
let alumniInterval;

function initAlumniCarousel() {
	const carousel = document.getElementById('alumniCarousel');
	const dots = document.querySelectorAll('.alumni-dot');
	const prevBtn = document.getElementById('prevAlumni');
	const nextBtn = document.getElementById('nextAlumni');
	
	if (!carousel || !dots.length || !prevBtn || !nextBtn) {
		console.error('Alumni carousel elements not found');
		return;
	}
	
	// Update carousel position
	function updateCarousel() {
		carousel.style.transform = `translateX(-${currentAlumniSlide * 100}%)`;
		
		// Update dots
		dots.forEach((dot, index) => {
			if (index === currentAlumniSlide) {
				dot.classList.remove('bg-white/50');
				dot.classList.add('bg-white');
			} else {
				dot.classList.remove('bg-white');
				dot.classList.add('bg-white/50');
			}
		});
	}
	
	// Next slide
	function nextSlide() {
		currentAlumniSlide = (currentAlumniSlide + 1) % 4;
		updateCarousel();
	}
	
	// Previous slide
	function prevSlide() {
		currentAlumniSlide = (currentAlumniSlide - 1 + 4) % 4;
		updateCarousel();
	}
	
	// Go to specific slide
	function goToSlide(slideIndex) {
		currentAlumniSlide = slideIndex;
		updateCarousel();
	}
	
	// Auto-play functionality
	function startAutoPlay() {
		if (alumniAutoPlay) {
			alumniInterval = setInterval(nextSlide, 5000); // Change slide every 5 seconds
		}
	}
	
	function stopAutoPlay() {
		clearInterval(alumniInterval);
	}
	
	
	// Event listeners
	nextBtn.addEventListener('click', () => {
		nextSlide();
		if (alumniAutoPlay) {
			stopAutoPlay();
			startAutoPlay();
		}
	});
	
	prevBtn.addEventListener('click', () => {
		prevSlide();
		if (alumniAutoPlay) {
			stopAutoPlay();
			startAutoPlay();
		}
	});
	
	dots.forEach((dot, index) => {
		dot.addEventListener('click', () => {
			goToSlide(index);
			if (alumniAutoPlay) {
				stopAutoPlay();
				startAutoPlay();
			}
		});
	});
	
	
	// Touch/swipe support
	let startX = 0;
	let endX = 0;
	
	carousel.addEventListener('touchstart', (e) => {
		startX = e.touches[0].clientX;
	});
	
	carousel.addEventListener('touchend', (e) => {
		endX = e.changedTouches[0].clientX;
		handleSwipe();
	});
	
	function handleSwipe() {
		const threshold = 50;
		const diff = startX - endX;
		
		if (Math.abs(diff) > threshold) {
			if (diff > 0) {
				nextSlide(); // Swipe left - next slide
			} else {
				prevSlide(); // Swipe right - previous slide
			}
			
			if (alumniAutoPlay) {
				stopAutoPlay();
				startAutoPlay();
			}
		}
	}
	
	// Keyboard navigation
	document.addEventListener('keydown', (e) => {
		if (e.key === 'ArrowLeft') {
			prevSlide();
			if (alumniAutoPlay) {
				stopAutoPlay();
				startAutoPlay();
			}
		} else if (e.key === 'ArrowRight') {
			nextSlide();
			if (alumniAutoPlay) {
				stopAutoPlay();
				startAutoPlay();
			}
		}
	});
	
	// Initialize
	updateCarousel();
	startAutoPlay();
	
	// Pause auto-play when page is not visible
	document.addEventListener('visibilitychange', () => {
		if (document.hidden) {
			stopAutoPlay();
		} else if (alumniAutoPlay) {
			startAutoPlay();
		}
	});
}


	  const rect = logoContainer.getBoundingClientRect();
	  const x = e.clientX - rect.left;
	  const y = e.clientY - rect.top;
	  const centerX = rect.width / 2;
	  const centerY = rect.height / 2;
	  
	  // Calculate distance from center
	  const distanceX = x - centerX;
	  const distanceY = y - centerY;
	  
	  // Adjust particles based on cursor position
	  const particles = document.querySelectorAll('.particle');
	  particles.forEach((particle, index) => {
		const speed = index * 0.5 + 1;
		particle.style.transform = `translate(${distanceX * 0.01 * speed}px, ${distanceY * 0.01 * speed}px)`;
	  });
	  
	  // Create a subtle parallax effect
	  const logo = logoContainer.querySelector('img');
	  logo.style.transform = `scale(1.05) rotate(${distanceX * 0.01}deg)`;
	  
	  // Dynamic glow effect
	  const glow = logoContainer.querySelector('.glow-effect');
	  glow.style.left = `${x}px`;
	  glow.style.top = `${y}px`;
	});
	
	// Reset on mouse leave
	logoContainer.addEventListener('mouseleave', () => {
	  const particles = document.querySelectorAll('.particle');
	  particles.forEach(particle => {
		particle.style.transform = '';
	  });
	  
	  const logo = logoContainer.querySelector('img');
	  logo.style.transform = '';
	});
  });

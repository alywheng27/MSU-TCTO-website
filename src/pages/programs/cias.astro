			const slides = document.querySelectorAll('.slider-slide');
			slides.forEach((slide, index) => {
				(slide as HTMLElement).style.animationDelay = `${index * 0.1}s`;
				slide.classList.add('slide-enter-right');
				
				// Preload images for smoother transitions
				const img = slide.querySelector('img') as HTMLImageElement;
				if (img) {
					// Add loading optimization
					img.addEventListener('load', () => {
						img.style.opacity = '1';
						img.style.transition = 'opacity 0.3s ease';
					});
					
					// Set initial opacity for smooth loading
					img.style.opacity = '0';
				}
			});

			// Add smooth hover effects to navigation buttons
			const navButtons = document.querySelectorAll('.nav-button');
			navButtons.forEach(button => {
				button.addEventListener('mouseenter', () => {
					(button as HTMLElement).style.transform = 'scale(1.1)';
					(button as HTMLElement).style.transition = 'transform 0.2s ease';
				});
				
				button.addEventListener('mouseleave', () => {
					(button as HTMLElement).style.transform = 'scale(1)';
				});
			});
		});
	</script>


---
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import '../../styles/css/global.css';

const currentPath = Astro.url.pathname;
---

<Layout title="College of Law | MSU-TCTO">
	<main class="font-serif bg-gray-50">
		<Navbar path={currentPath} client:visible />

		<!-- Hero Section -->
		<section class="relative bg-msu-deep-ocean h-screen min-h-[700px] flex items-center overflow-hidden">
			<!-- Parallax Background Image -->
			<div 
				class="absolute inset-0 bg-black/40 z-0"
				style="
				background-image: url('/images/col/col.jpg');
				background-size: cover;
				background-position: center;
				background-attachment: fixed;
				"
			></div>
			
			<div class="container mx-auto px-6 z-10 relative">
				<div class="max-w-4xl mx-auto text-center">
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight">
						<span class="text-gold-500">College of Law</span>
					</h1>
					<p class="text-xl text-white mb-8 max-w-2xl mx-auto">
						Educating the next generation of legal professionals with excellence, integrity, and service
					</p>
					<div class="flex gap-4 justify-center">
						<a href="#programs" class="btn-gold px-8 py-3 text-lg font-medium">
							Explore Programs
						</a>
						<a href="#admissions" class="btn-outline-white px-8 py-3 text-lg font-medium">
							Admissions
						</a>
					</div>
				</div>
			</div>
			<div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-gray-50 to-transparent"></div>
		</section>

		<!-- About Section -->
		<section class="py-24 bg-white">
			<div class="container mx-auto px-6">
				<div class="flex flex-col lg:flex-row items-center gap-16">
					<div class="lg:w-1/2">
						<div class="relative rounded-xl overflow-hidden shadow-2xl border-4 border-gold-500">
							<img src="/images/law/law-building.jpg" alt="Law College Building" class="w-full h-auto object-cover transition-transform duration-500 hover:scale-105" />
							<div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-8">
								<h3 class="text-2xl font-bold text-white">Justice Hall - Our Historic Home</h3>
							</div>
						</div>
					</div>
					
					<div class="lg:w-1/2">
						<h2 class="text-4xl font-bold text-msu-deep-ocean mb-6 border-b-2 border-gold-500 pb-2 inline-block">
							About Our College
						</h2>
						<div class="prose-lg text-gray-700 space-y-6">
							<p>
								Founded in 1975, the College of Law at MSU-TCTO has established itself as a premier institution for legal education, combining rigorous academic training with practical skills development.
							</p>
							<p>
								Our Juris Doctor program is accredited by the Legal Education Board and recognized for producing bar topnotchers and distinguished legal professionals serving across the Philippines and internationally.
							</p>
							<p>
								With a faculty composed of seasoned practitioners, distinguished scholars, and sitting judges, we offer an unparalleled learning experience that bridges theory and practice.
							</p>
							<div class="mt-8">
								<a href="/about" class="inline-flex items-center text-gold-600 font-medium hover:text-gold-800">
									Learn more about our history
									<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
									</svg>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Stats Section -->
		<section class="py-16 bg-msu-deep-ocean text-white">
			<div class="container mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
					<div class="p-6 border-r border-white/20">
						<div class="text-5xl font-bold mb-2">85%</div>
						<div class="text-xl">Bar Exam Pass Rate</div>
					</div>
					<div class="p-6 border-r border-white/20">
						<div class="text-5xl font-bold mb-2">12</div>
						<div class="text-xl">Bar Topnotchers</div>
					</div>
					<div class="p-6 border-r border-white/20">
						<div class="text-5xl font-bold mb-2">45+</div>
						<div class="text-xl">Years of Excellence</div>
					</div>
					<div class="p-6">
						<div class="text-5xl font-bold mb-2">1:15</div>
						<div class="text-xl">Faculty-Student Ratio</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Programs Section -->
		<section id="programs" class="py-24 bg-gray-50">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-4xl font-bold text-msu-deep-ocean mb-4">Academic Programs</h2>
					<p class="text-gray-600 max-w-2xl mx-auto">
						Our comprehensive legal education programs prepare students for diverse careers in law and public service
					</p>
				</div>

				<div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
					<!-- Juris Doctor -->
					<div class="bg-white rounded-xl shadow-lg overflow-hidden border-t-4 border-gold-500 transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
						<div class="p-8">
							<div class="flex items-center mb-4">
								<div class="bg-gold-100 p-3 rounded-full mr-4">
									<svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-msu-deep-ocean">Juris Doctor</h3>
							</div>
							<p class="text-gray-600 mb-6">
								Our flagship program providing comprehensive legal education to prepare students for the Philippine Bar Examination and legal practice.
							</p>
							<ul class="space-y-3 mb-6">
								<li class="flex items-start">
									<svg class="h-5 w-5 text-gold-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span>4-year professional degree</span>
								</li>
								<li class="flex items-start">
									<svg class="h-5 w-5 text-gold-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span>LEB-accredited curriculum</span>
								</li>
								<li class="flex items-start">
									<svg class="h-5 w-5 text-gold-500 mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span>Moot court and legal clinic requirements</span>
								</li>
							</ul>
							<a href="/programs/jd" class="inline-flex items-center text-gold-600 font-medium hover:text-gold-800">
								Program details
								<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>

					<!-- LLM -->
					<div class="bg-white rounded-xl shadow-lg overflow-hidden border-t-4 border-msu-deep-ocean transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
						<div class="p-8">
							<div class="flex items-center mb-4">
								<div class="bg-blue-100 p-3 rounded-full mr-4">
									<svg class="w-8 h-8 text-msu-deep-ocean" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-msu-deep-ocean">Master of Laws (LL.M.)</h3>
							</div>
							<p class="text-gray-600 mb-6">
								Advanced legal studies for law graduates seeking specialization in International Law, Business Law, or Human Rights.
							</p>
							<ul class="space-y-3 mb-6">
								<li class="flex items-start">
									<svg class="h-5 w-5 text-msu-deep-ocean mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span>1-2 year graduate program</span>
								</li>
								<li class="flex items-start">
									<svg class="h-5 w-5 text-msu-deep-ocean mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span>Flexible evening classes</span>
								</li>
								<li class="flex items-start">
									<svg class="h-5 w-5 text-msu-deep-ocean mt-1 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span>Thesis or non-thesis options</span>
								</li>
							</ul>
							<a href="/programs/llm" class="inline-flex items-center text-msu-deep-ocean font-medium hover:text-blue-800">
								Program details
								<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>

				<div class="mt-12 text-center">
					<a href="/programs" class="btn-gold px-8 py-3 text-lg font-medium inline-flex items-center">
						View all programs
						<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
						</svg>
					</a>
				</div>
			</div>
		</section>

		<!-- Faculty Section -->
		<section class="py-24 bg-white">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-4xl font-bold text-msu-deep-ocean mb-4">Distinguished Faculty</h2>
					<p class="text-gray-600 max-w-2xl mx-auto">
						Learn from accomplished legal scholars, practitioners, and jurists
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
					<!-- Faculty 1 -->
					<div class="bg-white rounded-xl shadow-md overflow-hidden border-b-4 border-gold-500 transform transition-all duration-300 hover:-translate-y-2 hover:shadow-lg">
						<img src="/images/law/faculty1.jpg" alt="Dean Juan Dela Cruz" class="w-full h-64 object-cover">
						<div class="p-6">
							<h3 class="text-xl font-bold text-msu-deep-ocean mb-1">Dean Juan Dela Cruz</h3>
							<p class="text-gold-600 font-medium mb-4">Dean and Professor of Constitutional Law</p>
							<p class="text-gray-600 mb-4">
								Former Supreme Court Clerk and author of several legal textbooks used nationwide.
							</p>
							<a href="/faculty/juan-dela-cruz" class="text-sm font-medium text-msu-deep-ocean hover:text-gold-600 flex items-center">
								View profile
								<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>

					<!-- Faculty 2 -->
					<div class="bg-white rounded-xl shadow-md overflow-hidden border-b-4 border-gold-500 transform transition-all duration-300 hover:-translate-y-2 hover:shadow-lg">
						<img src="/images/law/faculty2.jpg" alt="Prof. Maria Santos" class="w-full h-64 object-cover">
						<div class="p-6">
							<h3 class="text-xl font-bold text-msu-deep-ocean mb-1">Prof. Maria Santos</h3>
							<p class="text-gold-600 font-medium mb-4">Professor of International Law</p>
							<p class="text-gray-600 mb-4">
								Philippine representative to the UN Commission on International Trade Law.
							</p>
							<a href="/faculty/maria-santos" class="text-sm font-medium text-msu-deep-ocean hover:text-gold-600 flex items-center">
								View profile
								<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>

					<!-- Faculty 3 -->
					<div class="bg-white rounded-xl shadow-md overflow-hidden border-b-4 border-gold-500 transform transition-all duration-300 hover:-translate-y-2 hover:shadow-lg">
						<img src="/images/law/faculty3.jpg" alt="Judge Roberto Garcia" class="w-full h-64 object-cover">
						<div class="p-6">
							<h3 class="text-xl font-bold text-msu-deep-ocean mb-1">Judge Roberto Garcia</h3>
							<p class="text-gold-600 font-medium mb-4">Adjunct Professor of Criminal Procedure</p>
							<p class="text-gray-600 mb-4">
								Presiding Judge of Regional Trial Court with 20 years of judicial experience.
							</p>
							<a href="/faculty/roberto-garcia" class="text-sm font-medium text-msu-deep-ocean hover:text-gold-600 flex items-center">
								View profile
								<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>

				<div class="mt-12 text-center">
					<a href="/faculty" class="btn-outline px-8 py-3 text-lg font-medium inline-flex items-center border border-msu-deep-ocean text-msu-deep-ocean hover:bg-msu-deep-ocean hover:text-white">
						Meet all faculty
						<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
						</svg>
					</a>
				</div>
			</div>
		</section>

		<!-- Admissions Section -->
		<section id="admissions" class="py-24 bg-gray-50">
			<div class="container mx-auto px-6">
				<div class="flex flex-col lg:flex-row items-center gap-16">
					<div class="lg:w-1/2">
						<h2 class="text-4xl font-bold text-msu-deep-ocean mb-6 border-b-2 border-gold-500 pb-2 inline-block">
							Admissions
						</h2>
						<div class="prose-lg text-gray-700 space-y-6">
							<p>
								The College of Law seeks intellectually curious, ethically grounded, and socially committed individuals who demonstrate the potential to excel in legal studies and contribute to the legal profession.
							</p>
							<p>
								Our selective admissions process evaluates academic achievement, critical thinking skills, and personal qualities that align with our mission of producing outstanding legal professionals.
							</p>
							<div class="mt-8 space-y-4">
								<a href="/admissions/requirements" class="btn-gold px-8 py-3 text-lg font-medium inline-flex items-center w-full sm:w-auto justify-center">
									Admission Requirements
								</a>
								<a href="/admissions/apply" class="btn-outline px-8 py-3 text-lg font-medium inline-flex items-center w-full sm:w-auto justify-center border border-msu-deep-ocean text-msu-deep-ocean hover:bg-msu-deep-ocean hover:text-white">
									Apply Now
								</a>
							</div>
						</div>
					</div>
					
					<div class="lg:w-1/2">
						<div class="bg-white rounded-xl shadow-xl overflow-hidden border-l-4 border-gold-500">
							<div class="p-8 bg-msu-deep-ocean text-white">
								<h3 class="text-2xl font-bold mb-4">Important Dates</h3>
								<ul class="space-y-6">
									<li class="flex items-start">
										<div class="bg-gold-500 text-msu-deep-ocean font-bold rounded-lg px-3 py-1 mr-4 flex-shrink-0">
											Jan 15
										</div>
										<div>
											<h4 class="font-bold">Application Deadline</h4>
											<p class="text-sm text-gray-300">Fall 2024 Intake</p>
										</div>
									</li>
									<li class="flex items-start">
										<div class="bg-gold-500 text-msu-deep-ocean font-bold rounded-lg px-3 py-1 mr-4 flex-shrink-0">
											Mar 1
										</div>
										<div>
											<h4 class="font-bold">Law Admission Test</h4>
											<p class="text-sm text-gray-300">Written examination date</p>
										</div>
									</li>
									<li class="flex items-start">
										<div class="bg-gold-500 text-msu-deep-ocean font-bold rounded-lg px-3 py-1 mr-4 flex-shrink-0">
											Apr 15
										</div>
										<div>
											<h4 class="font-bold">Interviews</h4>
											<p class="text-sm text-gray-300">For shortlisted candidates</p>
										</div>
									</li>
									<li class="flex items-start">
										<div class="bg-gold-500 text-msu-deep-ocean font-bold rounded-lg px-3 py-1 mr-4 flex-shrink-0">
											May 30
										</div>
										<div>
											<h4 class="font-bold">Orientation</h4>
											<p class="text-sm text-gray-300">For incoming 1L students</p>
										</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Student Life Section -->
		<section class="py-24 bg-white">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-4xl font-bold text-msu-deep-ocean mb-4">Student Life</h2>
					<p class="text-gray-600 max-w-2xl mx-auto">
						Beyond the classroom, our students engage in a vibrant community of future legal professionals
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Moot Court -->
					<div class="relative group overflow-hidden rounded-xl shadow-lg h-96">
						<img src="/images/law/moot-court.jpg" alt="Moot Court Competition" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
						<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent flex flex-col justify-end p-8">
							<h3 class="text-2xl font-bold text-white mb-2">Moot Court Program</h3>
							<p class="text-gray-300 mb-4">
								Our award-winning teams compete nationally and internationally
							</p>
							<a href="/student-life/moot-court" class="text-gold-400 font-medium hover:text-white flex items-center">
								Learn more
								<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
					
					<!-- Law Review -->
					<div class="relative group overflow-hidden rounded-xl shadow-lg h-96">
						<img src="/images/law/law-review.jpg" alt="Law Review Journal" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
						<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent flex flex-col justify-end p-8">
							<h3 class="text-2xl font-bold text-white mb-2">MSU Law Review</h3>
							<p class="text-gray-300 mb-4">
								Student-edited scholarly journal publishing legal research
							</p>
							<a href="/student-life/law-review" class="text-gold-400 font-medium hover:text-white flex items-center">
								Learn more
								<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
					
					<!-- Student Orgs -->
					<div class="relative group overflow-hidden rounded-xl shadow-lg h-96">
						<img src="/images/law/student-orgs.jpg" alt="Student Organizations" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
						<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent flex flex-col justify-end p-8">
							<h3 class="text-2xl font-bold text-white mb-2">Student Organizations</h3>
							<p class="text-gray-300 mb-4">
								15+ groups for networking and professional development
							</p>
							<a href="/student-life/organizations" class="text-gold-400 font-medium hover:text-white flex items-center">
								Learn more
								<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>


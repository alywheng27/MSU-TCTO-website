---
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import '../../styles/css/global.css';
import '../../styles/css/globalanimate.css';

const currentPath = Astro.url.pathname;
---

<Layout title="College of Fisheries | MSU-TCTO">
	<main class="font-sans">
		<Navbar path={currentPath} client:visible />

		<!-- Hero Section with Video Background -->
		<section class="relative bg-msu-main-color h-screen min-h-[700px] flex items-center overflow-hidden pt-[80px]">
			<!-- Video Background -->
			<div class="absolute inset-0 z-0 overflow-hidden">
				<video autoplay muted loop class="w-full h-full object-cover">
					<source src="/video/msucamp.mp4" type="video/mp4">
					<!-- Fallback image -->
					<img src="/images/cof/cof.jpg" alt="College of Fisheries" class="w-full h-full object-cover">
				</video>
				<div class="absolute inset-0 bg-black/40"></div>
			</div>
			
			<!-- Gradient overlay -->
			<div class="absolute inset-0 bg-gradient-to-t from-msu-deep-ocean/90 via-msu-main-color/50 to-transparent z-1"></div>
			
			<div class="container mx-auto px-6 z-10 relative">
				<div class="max-w-4xl mx-auto text-center">
					<div class="mb-8">
						<img src="/images/College Logo/LOGO COF.png" alt="College of Fisheries Logo" class="h-32 mx-auto mb-6">
					</div>
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight animate-fadeInUp">
						College of <span class="text-white font-bold">Fisheries</span>
					</h1>
					<p class="text-xl text-white mb-8 max-w-2xl mx-auto animate-fadeInUp delay-100">
						Cultivating excellence in aquatic sciences and sustainable fisheries management
					</p>
				
					<div class="flex flex-wrap justify-center gap-4 animate-fadeInUp delay-200">
						<a 
							href="#programs" 
							class="bg-msu-main-color hover:bg-msu-deep-ocean text-white font-bold py-3 px-8 rounded-full transition-all duration-300 inline-flex items-center hover:shadow-lg hover:-translate-y-1"
						>
							Explore Programs
							<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
							</svg>
						</a>
						<a 
							href="#contact" 
							class="bg-transparent border-2 border-white hover:bg-white/20 text-white font-bold py-3 px-8 rounded-full transition-all duration-300 inline-flex items-center hover:shadow-lg hover:-translate-y-1"
						>
							Contact Us
							<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
							</svg>
						</a>
					</div>
				</div>
			</div>
			
			<!-- Scrolling indicator -->
			<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
				<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</div>
		</section>

		<!-- University Seal & Accreditation -->
		<section class="py-12 bg-white">
			<div class="container mx-auto px-6">
				<div class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-16">
					<div class="text-center">
						<img src="/images/MSU Seal New (Official).png" alt="MSU Seal" class="h-32 mx-auto mb-4">
						<h3 class="text-lg font-semibold text-msu-deep-ocean">Mindanao State University</h3>
						<p class="text-gray-600">Tawi-Tawi College of Technology and Oceanography</p>
					</div>
					<div class="h-20 w-px bg-gray-200 hidden md:block"></div>
					<div class="text-center">
						<img src="/images/social media/aaccup.png" alt="AACCUP Accredited" class="h-32 mx-auto mb-4">
						<h3 class="text-lg font-semibold text-msu-deep-ocean">AACCUP Accredited</h3>
						<p class="text-gray-600">Level III Re-Accredited Status</p>
					</div>
					<div class="h-20 w-px bg-gray-200 hidden md:block"></div>
					<div class="text-center">
						<img src="/images/social media/chedlogo.png" alt="CHED Recognized" class="h-32 mx-auto mb-4">
						<h3 class="text-lg font-semibold text-msu-deep-ocean">CHED Recognized</h3>
						<p class="text-gray-600">Center of Excellence in Fisheries Education</p>
					</div>
				</div>
			</div>
		</section>

		<!-- About Section with Tabs -->
		<section class="py-20 bg-gray-50">
			<div class="container mx-auto px-6">
				<div class="flex flex-col lg:flex-row items-start gap-12">
					<div class="lg:w-1/2">
						<div class="relative rounded-xl overflow-hidden shadow-2xl group cursor-pointer h-full">
							<img src="/images/cof/cof.jpg" alt="College of Fisheries Building" 
								class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
							
							<div class="absolute inset-0 bg-gradient-to-t from-msu-deep-ocean/70 via-transparent to-transparent flex items-end p-8">
								<div>
									<h3 class="text-2xl font-bold text-white mb-2">Our Facilities</h3>
									<p class="text-gray-200">State-of-the-art laboratories and research facilities</p>
								</div>
							</div>
						</div>
					</div>
					
					<div class="lg:w-1/2">
						<h2 class="text-4xl font-bold text-msu-deep-ocean mb-6">About the College of Fisheries</h2>
						
						<div class="mb-6 border-b border-gray-200">
							<nav class="-mb-px flex space-x-8">
								<button class="tab-button active py-4 px-1 border-b-2 font-medium text-sm border-msu-gold text-msu-deep-ocean" data-tab="mission">
									Goal
								</button>
								<button class="tab-button py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="vision">
									Objectives
								</button>
								<button class="tab-button py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="history">
									History
								</button>
							</nav>
						</div>
						
						<div class="tab-content active" id="mission-content">
							<div class="space-y-4 text-gray-700 text-justify">
								<p class="text-lg">
									The College of Fisheries is committed to providing quality education, research, and extension services in fisheries and aquatic sciences to produce competent and ethical professionals who will contribute to the sustainable development of the fisheries sector.
								</p>
								<ul class="space-y-3 list-disc pl-5">
									<li>Provide relevant and innovative academic programs in fisheries</li>
									<li>Conduct cutting-edge research in aquatic sciences</li>
									<li>Deliver extension services to fishing communities</li>
									<li>Promote sustainable fisheries practices</li>
									<li>Foster partnerships with industry and government</li>
								</ul>
							</div>
						</div>
						
						<div class="tab-content hidden" id="vision-content">
							<div class="space-y-4 text-gray-700 text-justify">
								<p class="text-lg">
									To be the leading institution in fisheries education and research in Southern Philippines, recognized for excellence in producing globally competitive fisheries professionals and for contributing to sustainable aquatic resource management.
								</p>
							</div>
						</div>
						
						<div class="tab-content hidden" id="history-content">
							<div class="space-y-4 text-gray-700 text-justify">
								<p class="text-lg">
									Established in 1985, the College of Fisheries at MSU-TCTO has grown to become a premier institution for fisheries education in the region. With its strategic location in the rich fishing grounds of Tawi-Tawi, the college has developed unique expertise in tropical fisheries and marine resource management.
								</p>
								<p>
									The college initially offered a Bachelor of Science in Fisheries program and has since expanded to include graduate programs and specialized training in aquaculture, marine biology, and fisheries technology.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<script>
			document.addEventListener('DOMContentLoaded', function() {
				const tabButtons = document.querySelectorAll('.tab-button');
				
				tabButtons.forEach(button => {
					button.addEventListener('click', function() {
						// Remove active class from all buttons and contents
						document.querySelectorAll('.tab-button').forEach(btn => {
							btn.classList.remove('active');
							btn.classList.add('border-transparent', 'text-gray-500');
							btn.classList.remove('border-msu-gold', 'text-msu-deep-ocean');
						});
						
						document.querySelectorAll('.tab-content').forEach(content => {
							content.classList.add('hidden');
							content.classList.remove('active');
						});
						
						// Add active class to clicked button
						this.classList.add('active', 'border-msu-gold', 'text-msu-deep-ocean');
						this.classList.remove('border-transparent', 'text-gray-500');
						
						// Show corresponding content
						const tabId = this.getAttribute('data-tab');
						document.getElementById(`${tabId}-content`).classList.remove('hidden');
						document.getElementById(`${tabId}-content`).classList.add('active');
					});
				});
			});
			</script>
			
			<style>
				.tab-content {
					transition: opacity 0.3s ease;
				}
				
				.tab-button.active {
					color: #002855;
					border-color: #D4AF37;
				}
			</style>
		</section>

		<!-- Stats Section with Animated Counters -->
		<section class="py-16 bg-msu-main-color text-white">
			<div class="container mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
					<div class="p-6">
						<div class="text-5xl font-bold mb-2 counter" data-target="1200">0</div>
						<div class="text-xl">Students Enrolled</div>
					</div>
					<div class="p-6">
						<div class="text-5xl font-bold mb-2 counter" data-target="45">0</div>
						<div class="text-xl">Faculty Members</div>
					</div>
					<div class="p-6">
						<div class="text-5xl font-bold mb-2 counter" data-target="8">0</div>
						<div class="text-xl">Academic Programs</div>
					</div>
					<div class="p-6">
						<div class="text-5xl font-bold mb-2 counter" data-target="15">0</div>
						<div class="text-xl">Research Projects</div>
					</div>
				</div>
			</div>
			
			<script>
			document.addEventListener('DOMContentLoaded', function() {
				const counters = document.querySelectorAll('.counter');
				const speed = 200;
				
				counters.forEach(counter => {
					const target = +counter.getAttribute('data-target');
					const count = +counter.innerText;
					const increment = target / speed;
					
					if (count < target) {
						counter.innerText = Math.ceil(count + increment);
						setTimeout(updateCount, 1);
					} else {
						counter.innerText = target;
					}
					
					function updateCount() {
						const count = +counter.innerText;
						const increment = target / speed;
						
						if (count < target) {
							counter.innerText = Math.ceil(count + increment);
							setTimeout(updateCount, 1);
						} else {
							counter.innerText = target;
						}
					}
				});
			});
			</script>
		</section>


---
import React from 'react';
import Layout from '../../layouts/Layout.astro';
import Navbar from "../../components/Navbar";
import FooterNav from "../../components/FooterNav.astro";
import Footer from "../../components/Footer.astro";
import '../../styles/css/global.css';
import '../../styles/css/globalanimate.css';
import MainVideo from '../../components/MainVideo.astro';

import Old_Campus_Swiper from "../../components/old_campus_swiper.jsx";
import College_Logo_Swiper from "../../components/college_logo_swiper.jsx";
import MySwiper from "../../components/MySwiper.jsx";


const currentPath = Astro.url.pathname;
---
<Layout title="MSU | Tawi-Tawi - Legacy of Excellence">


    <main class="font-sans antialiased text-gray-800 dark:text-gray-200 dark:bg-gray-900 leading-normal">
        <!-- Enhanced Navbar -->
        <Navbar path={currentPath} client:visible />

<!-- Video Hero Section -->
<section class="relative h-screen min-h-[800px] overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
        <video 
            autoplay 
            loop 
            muted 
            playsinline 
            class="w-full h-full object-cover"
            poster="/images/video-poster.jpg"
        >
            <source src="/video/msucamp.mp4" type="video/mp4">
            <!-- Fallback image if video doesn't load -->
            <img src="/images/msucampus.jpg" alt="MSU Tawi-Tawi Campus" class="w-full h-full object-cover">
        </video>
        <!-- Enhanced Video overlay with gradient -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-msu-main-color/70 to-msu-deep-ocean/90"></div>
    </div>
    
    <!-- Update the hero content section -->
    <div class="relative z-20 h-full flex flex-col justify-center items-center text-center px-4 sm:px-6 max-w-6xl mx-auto">
        <div class="mb-8 px-4" data-aos="fade-up" data-aos-duration="1000">
            <span class="text-white font-medium tracking-widest text-sm sm:text-base">EST. 1964</span>
              <!-- Responsive Typography with Perfect Scaling -->
        <h1 class="font-philosopher text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6 leading-tight tracking-tight animate-fadeInUp">
            <span class="block text-shadow-md">Mindanao State University</span>
            <span class="block font-bold mt-2 sm:mt-3 text-shadow">Tawi-Tawi College of Technology and Oceanography</span>
        </h1>

   
        
            <!-- Enhanced gradient divider with animation -->
            <!-- <div class="w-24 sm:w-32 h-1 bg-gradient-to-r from-white via-msu-main-color to-white mx-auto my-4 sm:my-6 transform transition-all duration-1000 hover:scale-x-110 hover:via-[#D4AF37]"></div> -->
                
            <!-- Responsive Subheading -->
            <p class="font-philosopher text-lg sm:text-xl md:text-2xl text-white/90 mb-6 sm:mb-8 max-w-2xl mx-auto animate-fadeInUp delay-100 leading-relaxed">
                Creating Opportunities • Transforming Lives
            </p>
        </div>
        
        <div class="mt-8 sm:mt-12" data-aos="fade-up" data-aos-delay="300">
            <div class="flex flex-col sm:flex-row gap-4">
                <div class="mt-8 sm:mt-12" data-aos="fade-up" data-aos-delay="300">
                    <div class="flex flex-col sm:flex-row gap-4">
                        <!-- History Button with enhanced gradient hover -->
                        <a href="#history-section" class="explore-btn relative overflow-hidden group hover:bg-gradient-to-r from-msu-main-color to-msu-deep-ocean transition-all duration-500">
                            <span class="relative z-10 px-6 py-3 sm:px-8 sm:py-4 flex items-center text-white group-hover:text-white">
                                Explore Our History
                                <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5 transition-transform group-hover:translate-x-1 sm:group-hover:translate-x-2 duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                </svg>
                            </span>
                            <span class="absolute inset-0 bg-gradient-to-r from-msu-main-color to-msu-deep-ocean opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
                        </a>
                
                        <!-- Mission Button with enhanced gradient hover -->
                        <a href="#mission-section" class="explore-btn relative overflow-hidden group hover:bg-gradient-to-r from-msu-main-color to-msu-deep-ocean transition-all duration-500">
                            <span class="relative z-10 px-6 py-3 sm:px-8 sm:py-4 flex items-center text-white group-hover:text-white">
                                Our Vision & Mission
                                <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5 transition-transform group-hover:translate-x-1 sm:group-hover:translate-x-2 duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                </svg>
                            </span>
                            <span class="absolute inset-0 bg-gradient-to-r from-msu-main-color to-msu-deep-ocean opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
                        </a>

                        <!-- Academic Button with enhanced gradient hover -->
                        <a href="#academic-section" class="explore-btn relative overflow-hidden group hover:bg-gradient-to-r from-msu-main-color to-msu-deep-ocean transition-all duration-500">
                            <span class="relative z-10 px-6 py-3 sm:px-8 sm:py-4 flex items-center text-white group-hover:text-white">
                                Our Academic
                                <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5 transition-transform group-hover:translate-x-1 sm:group-hover:translate-x-2 duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                </svg>
                            </span>
                            <span class="absolute inset-0 bg-gradient-to-r from-msu-main-color to-msu-deep-ocean opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
                        </a>
                    </div>
                </div>
                    
                    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </section>

       
        <!-- History Timeline with Interactive Elements -->
        <section class="relative z-10 py-28 px-6 max-w-8xl mx-auto bg-white dark:bg-gray-900">
            <div class="text-center mb-20" data-aos="fade-up">
                <span class="text-[#61063B] dark:text-yellow-400 uppercase tracking-widest text-sm">Our Legacy</span>
                <h2 class="text-4xl md:text-5xl font-bold mt-4 mb-6 text-gray-900 dark:text-gray-100">Chronicles of Excellence</h2>
                <div class="w-24 h-1 bg-gradient-to-r from-[#61063B] to-[#61063B] dark:from-yellow-400 dark:to-yellow-500 mx-auto"></div>
            </div>

            <!-- Interactive Timeline -->
            <div class="timeline-container relative">
                <!-- Timeline Line -->
                <div class="timeline-line absolute left-1/2 h-full w-1 bg-gradient-to-b from-[#61063B] via-msu-deep-ocean to-[#61063B] dark:from-yellow-400 dark:via-yellow-500 dark:to-yellow-400 transform -translate-x-1/2"></div>
<!-- Timeline Item 1 -->
<div class="timeline-item mb-32 group" data-year="1964">
    <div class="timeline-content transform transition-all duration-500 group-hover:scale-105" data-aos="fade-up">
        <div class="timeline-dot absolute left-1/2 -ml-3 w-6 h-6 rounded-full bg-[#D4AF37] dark:bg-yellow-400 border-4 border-[#61063B] dark:border-yellow-500 transform -translate-x-1/2 group-hover:scale-150 group-hover:bg-[#61063B] dark:group-hover:bg-yellow-600 transition-all duration-300"></div>
        <div class="timeline-card bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg border-l-4 border-[#61063B] dark:border-yellow-400">
            <div class="flex flex-col md:flex-row items-center">
                <div class="md:w-1/2 md:pr-12 mb-8 md:mb-0">
                    <span class="text-[#61063B] dark:text-yellow-400 font-medium">1964</span>
                    <h3 class="text-2xl font-bold mb-4 mt-2 text-gray-900 dark:text-gray-100">Humble Beginnings</h3>
                    <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                        Starting in 1964 as Mindanao State University Preparatory High School in Bongao, Tawi-Tawi, a mere adjunct to MSU Marawi
                         Preparatory High School, MSU Tawi-Tawi College of Technology and Oceanography has grown into an institution of academic
                          excellence. More secondary schools were established from 1967 to 1977 in the outlying island municipalities of Tawi-Tawi.
                           By 1990, 20 high schools were put up throughout the province. In 1984, MSU-TCTO Science High School and MSU-TCTO Child
                            Development Center – Laboratory Elementary School were established.

                            Republic Act 6060 gave birth to MSU-Sulu College of Technology and Oceanography on August 4, 
                            1969, initially offering degree programs and diploma in Fisheries Technology.
                    </p>
                </div>
                <div class="md:w-1/2 overflow-hidden rounded-lg">
                    <img 
                        src="/images/a breif history 1.png" 
                        alt="MSU TCTO Early Years" 
                        class="w-full h-auto rounded-lg shadow-md transform transition-all duration-500 group-hover:scale-110"
                    />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Timeline Item 2 -->
<div class="timeline-item mb-32 group" data-year="1969">
    <div class="timeline-content transform transition-all duration-500 group-hover:scale-105" data-aos="fade-up">
        <div class="timeline-dot absolute left-1/2 -ml-3 w-6 h-6 rounded-full bg-[#D4AF37] dark:bg-yellow-400 border-4 border-[#61063B] dark:border-yellow-500 transform -translate-x-1/2 group-hover:scale-150 group-hover:bg-[#61063B] dark:group-hover:bg-yellow-600 transition-all duration-300"></div>
        <div class="timeline-card bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg border-l-4 border-[#61063B] dark:border-yellow-400">
            <div class="flex flex-col md:flex-row items-center">
                <div class="md:w-1/2 order-2 md:order-1 overflow-hidden rounded-lg">
                    <img 
                        src="/images/a breif history 2.png" 
                        alt="MSU TCTO Growth" 
                        class="w-full h-auto rounded-lg shadow-md transform transition-all duration-500 group-hover:scale-110"
                    />
                </div>
                <div class="md:w-1/2 md:pl-12 mb-8 md:mb-0 order-1 md:order-2">
                    <span class="text-[#61063B] dark:text-yellow-400 font-medium">1969-1990</span>
                    <h3 class="text-2xl font-bold mb-4 mt-2 text-gray-900 dark:text-gray-100">Establishment & Growth</h3>
                    <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                        In 1973, Tawi-Tawi became a separate province from Sulu, and MSU-SCTO became MSU-Tawi-Tawi College of Technology and Oceanography per BP Blg. 197. In 1990 it became an autonomous university campus.

                        In its more than four decades of existence, it has steadfastly pursued its vision to be the center of excellence in Fisheries, Marine and Maritime Sciences and Engineering, and Oceanography, in its mission to
                         give Muslims and other cultural minorities access to quality education and develop such other programs as will promote Muslim welfare and hasten 
                         socio-economic development of the southernmost region of the country.
                        
                        MSU-TCTO is comprised of the following academic units: the College of Fisheries, College of Arts and Sciences, College of Education, 
                        Institute of Environmental and Oceanography Studies, College of Islamic and Arabic Studies, and the Institute of Information and
                         Communications Technology.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- Timeline Item 3 (LAST ITEM) -->
    <div class="timeline-item mb-32 group" data-year="1990">
        <div class="timeline-content transform transition-all duration-500 group-hover:scale-105" data-aos="fade-up">
            <div class="timeline-dot absolute left-1/2 -ml-3 w-6 h-6 rounded-full bg-[#D4AF37] dark:bg-yellow-400 border-4 border-[#61063B] dark:border-yellow-500 transform -translate-x-1/2 group-hover:scale-150 group-hover:bg-[#61063B] dark:group-hover:bg-yellow-600 transition-all duration-300"></div>
            <div class="timeline-card bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg border-l-4 border-[#61063B] dark:border-yellow-400">
                <div class="flex flex-col md:flex-row items-center">
                    <div class="md:w-1/2 md:pr-12 mb-8 md:mb-0">
                        <span class="text-[#61063B] dark:text-yellow-400 font-medium">1990-Present</span>
                        <h3 class="text-2xl font-bold mb-4 mt-2 text-gray-900 dark:text-gray-100">Modern Development</h3>
                        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                            The extension services of the college include providing capability building trainings and functional 
                            literacy programs to the Tawi-Tawians. The local folks are empowered through education and entrepreneurial development.

                            The college has continued to undertake researches in fisheries aquaculture,
                            and marine related sciences, as well as in the social sciences. These initiatives
                            are designed to promote sustainable utilization and rational management of the marine 
                            and fisheries resources of the area, with the aim of improving the standard of living of the people of Southern Philippines.
                        </p>
                    </div>
                    <div class="md:w-1/2 overflow-hidden rounded-lg">
                        <img 
                            src="/images/development.png" 
                            alt="MSU TCTO Modern Era" 
                            class="w-full h-auto rounded-lg shadow-md transform transition-all duration-500 group-hover:scale-110"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- Close timeline-container -->
<!-- Transformation Section with Comparison Slider -->
<div class="mb-28" data-aos="fade-up">
    <div class="text-center mb-16">
        <span class="text-[#61063B] dark:text-yellow-400 uppercase tracking-widest text-sm">Transformation</span>
        <h2 class="text-4xl md:text-5xl font-bold mt-4 mb-6 text-gray-900 dark:text-gray-100">From Then To Now</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-[#61063B] to-[#61063B] dark:from-yellow-400 dark:to-yellow-500 mx-auto"></div>
    </div>
    
    <div class="comparison-slider bg-white dark:bg-gray-800 p-8 rounded-xl shadow-md">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2 overflow-hidden rounded-xl">
                <img 
                    src="/images/campus-now-2.png" 
                    alt="Current Campus" 
                    class="w-full h-full object-cover rounded-xl transform transition-all duration-700 hover:scale-105"
                />
            </div>
            <div class="grid grid-rows-2 gap-6">
                <div class="overflow-hidden rounded-xl">
                    <img 
                        src="/images/campus-now-1.png" 
                        alt="Campus Building" 
                        class="w-full h-full object-cover rounded-xl transform transition-all duration-700 hover:scale-105"
                    />
                </div>
                <div class="overflow-hidden rounded-xl">
                    <img 
                        src="/images/Masjid Nuruul Iman.png" 
                        alt="Masjid Nuruul Iman" 
                        class="w-full h-full object-cover rounded-xl transform transition-all duration-700 hover:scale-105"
                    />
                </div>
                <div class="overflow-hidden rounded-xl">
                    <img 
                        src="/images/development.png" 
                        alt="MSUTCTO" 
                        class="w-full h-full object-cover rounded-xl transform transition-all duration-700 hover:scale-105"
                    />
                </div>
            </div>
        </div>
        
        <div class="text-center mt-12">
            <h3 class="text-3xl font-bold mb-6 text-gray-900 dark:text-gray-100">A Legacy of Growth & Innovation</h3>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto">
                From modest beginnings to a thriving academic community, our campus transformation mirrors our educational evolution.
            </p>
        </div>
    </div>
</div>

<!-- Close the timeline container div -->
</div>
            
       
    <!-- Vision Section -->
    <section id="mission-section" class="py-20 bg-white dark:bg-gray-900"><!-- Mission Section -->
        <div class="container mx-auto px-6">
          <div class="max-w-4xl mx-auto text-center">
            <span class="inline-block bg-msu-rusty-red/10 dark:bg-yellow-400/20 text-msu-rusty-red dark:text-yellow-400 px-4 py-2 rounded-full text-sm font-semibold mb-6 animate-fade-in">
              OUR VISION
            </span>
            <h2 class="headings text-3xl md:text-4xl font-bold text-msu-maroon dark:text-gray-100 mb-8 animate-fade-in-up">
              A university in the Sulu Archipelago renowned for Fisheries, Marine and Environmental Science
            </h2>
            <div class="relative">
              <div class="absolute -inset-4 bg-msu-rusty-red/10 dark:bg-yellow-400/10 rounded-xl blur-sm opacity-75 animate-pulse-slow"></div>
              <p class="paragraph text-lg md:text-xl text-gray-700 dark:text-gray-300 relative z-10 leading-relaxed animate-fade-in-up delay-100">
                We envision MSU-TCTO as a beacon of excellence in marine sciences, environmental studies, and related disciplines, serving as a catalyst for sustainable development in the Sulu Archipelago region.
              </p>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Mission Section -->
      <section class="py-20 bg-gray-50 dark:bg-gray-800">
        <div class="container mx-auto px-6">
          <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
              <span class="inline-block bg-msu-rusty-red/10 dark:bg-yellow-400/20 text-msu-rusty-red dark:text-yellow-400 px-4 py-2 rounded-full text-sm font-semibold animate-fade-in">
                OUR MISSION
              </span>
              <h2 class="headings text-3xl md:text-4xl font-bold text-msu-maroon dark:text-gray-100 mt-4 mb-6 animate-fade-in-up">
                Commitment to Excellence and Service
              </h2>
            </div>
  
            <!-- Mission Items Grid -->
            <div class="grid md:grid-cols-2 gap-8">
              <!-- Item 1 -->
              <div class="bg-white dark:bg-gray-700 p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-msu-maroon dark:border-yellow-400 animate-fade-in-up delay-100">
                <div class="text-msu-maroon dark:text-yellow-400 text-4xl mb-4">01</div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-3">Quality Education</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Provide relevant quality education especially to Muslims and other indigenous groups
                </p>
              </div>
  
              <!-- Item 2 -->
              <div class="bg-white dark:bg-gray-700 p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-msu-maroon dark:border-yellow-400 animate-fade-in-up delay-200">
                <div class="text-msu-maroon dark:text-yellow-400 text-4xl mb-4">02</div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-3">Environmental Stewardship</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Promote environmental conservation and sustainable utilization of fisheries and marine resources
                </p>
              </div>
  
              <!-- Item 3 -->
              <div class="bg-white dark:bg-gray-700 p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-msu-maroon dark:border-yellow-400 animate-fade-in-up delay-300">
                <div class="text-msu-maroon dark:text-yellow-400 text-4xl mb-4">03</div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-3">Knowledge Transfer</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Develop and transfer new knowledge and innovative technology to the community
                </p>
              </div>
  
              <!-- Item 4 -->
              <div class="bg-white dark:bg-gray-700 p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-msu-maroon dark:border-yellow-400 animate-fade-in-up delay-400">
                <div class="text-msu-maroon dark:text-yellow-400 text-4xl mb-4">04</div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-3">Community Engagement</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Engage stakeholders in peace and socio-economic development endeavors
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
<!-- Academic Units Section - Enhanced with Custom Icons -->
<section class="relative z-10 py-20 px-6 max-w-7xl mx-auto bg-white dark:bg-gray-900" id="academic-section">
    <div class="text-center mb-16" data-aos="fade-up">
        <span class="text-[#61063B] dark:text-yellow-400 uppercase tracking-widest text-sm">Academics</span>
        <h2 class="text-4xl md:text-5xl font-bold mt-4 mb-6 text-gray-900 dark:text-gray-100">Our Academic Units</h2>
        <div class="w-24 h-1 bg-gradient-to-r from-[#61063B] to-[#D4AF37] dark:from-yellow-400 dark:to-yellow-500 mx-auto"></div>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mt-6">
            Offering diverse programs that foster innovation, research, and community development
        </p>
    </div>

    <!-- Academic Units Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- College of Fisheries -->
        <div class="academic-card group bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
            <div class="icon-box bg-[#61063B] dark:bg-yellow-500 group-hover:bg-msu-deep-ocean dark:group-hover:bg-yellow-600 w-16 h-16 rounded-full flex items-center justify-center mb-4">
                <!-- Dolphin Icon -->
                <svg class="w-8 h-8 text-white dark:text-gray-900" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M20 10c0 4.4-3.6 8-8 8s-8-3.6-8-8 3.6-8 8-8 8 3.6 8 8z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M16 10c0 2.2-1.8 4-4 4s-4-1.8-4-4 1.8-4 4-4 4 1.8 4 4z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 16v-2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-[#61063B] dark:text-yellow-400">College of Fisheries</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
                Premier institution for marine sciences and fisheries technology in Southern Philippines.
            </p>
            <ul class="space-y-2 text-gray-600 dark:text-gray-300">
                <li class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-[#D4AF37] dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    MS in Aquaculture
                </li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-[#D4AF37] dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    BS in Food Technology
                </li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-[#D4AF37] dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                   Diploma in Fisheries Technology (Aquaculture)
                </li>
            </ul>
        </div>

        <!-- College of Islamic and Arabic Studies -->
        <div class="academic-card group bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="150">

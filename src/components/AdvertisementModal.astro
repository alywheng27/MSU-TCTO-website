<style>
/* Advertisement Overlay Styles */
.ad-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #61063B;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    animation: fadeIn 0.5s ease-in-out;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
}

.ad-overlay.hiding {
    animation: fadeOut 0.5s ease-in-out forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: scale(0.95);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes fadeOut {
    from {
        opacity: 1;
        transform: scale(1);
    }
    to {
        opacity: 0;
        transform: scale(0.95);
        visibility: hidden;
    }
}

.ad-container {
    position: relative;
    width: 90%;
    max-width: 1200px;
    height: 85vh;
    max-height: 800px;
    min-height: 500px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.1),
                0 0 100px rgba(59, 130, 246, 0.3);
    animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
    from {
        transform: translateY(30px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.ad-content-wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    gap: 0;
}

.ad-image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    flex-shrink: 0;
}

.ad-button-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px 20px;
    z-index: 10;
    pointer-events: none;
}

.ad-button-overlay > * {
    pointer-events: all;
}

.ad-facebook-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 18px 40px;
    background: linear-gradient(135deg, rgba(24, 119, 242, 0.95) 0%, rgba(13, 95, 204, 0.95) 100%);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #ffffff;
    text-decoration: none;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 600;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    letter-spacing: 0.5px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4),
                0 4px 16px rgba(24, 119, 242, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    border: 2px solid rgba(255, 255, 255, 0.3);
    min-width: 280px;
}

.ad-facebook-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.ad-facebook-button:hover::before {
    left: 100%;
}

.ad-facebook-button:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5),
                0 6px 20px rgba(24, 119, 242, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.4);
    background: linear-gradient(135deg, rgba(26, 127, 245, 0.98) 0%, rgba(14, 98, 208, 0.98) 100%);
    border-color: rgba(255, 255, 255, 0.4);
}

.ad-facebook-button:active {
    transform: translateY(0);
    box-shadow: 0 4px 12px rgba(24, 119, 242, 0.4),
                0 2px 6px rgba(0, 0, 0, 0.2);
}

.ad-facebook-button-icon {
    width: 28px;
    height: 28px;
    fill: #ffffff;
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.ad-facebook-button-text {
    font-size: 16px;
    font-weight: 600;
    white-space: nowrap;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.ad-facebook-button-arrow {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    stroke-width: 2.5;
    transition: transform 0.3s ease;
}

.ad-facebook-button:hover .ad-facebook-button-arrow {
    transform: translateX(4px);
}

.ad-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    animation: zoomIn 5s ease-in-out;
}

@keyframes zoomIn {
    from {
        transform: scale(1);
    }
    to {
        transform: scale(1.05);
    }

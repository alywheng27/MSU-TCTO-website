.ad-countdown-container {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 70px;
    height: 70px;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex;

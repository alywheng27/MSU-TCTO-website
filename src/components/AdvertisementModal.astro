<script>
    // Advertisement Overlay Countdown and Auto-Close
    document.addEventListener('DOMContentLoaded', function() {
        const overlay = document.getElementById('advertisement-overlay');
        const countdownEl = document.getElementById('ad-countdown');
        const skipBtn = document.getElementById('ad-skip-btn');
        
        // Check if advertisement should be hidden (February 1, 2026 at 7:30 AM)
        // Using ISO 8601 format: YYYY-MM-DDTHH:mm:ss
        const hideDate = new Date('2026-02-01T07:30:00');
        const currentDate = new Date();
        
        // If current date is on or after the hide date, don't show the advertisement
        if (currentDate >= hideDate) {
            if (overlay) {
                overlay.style.display = 'none';
                // Remove from DOM
                setTimeout(() => {
                    if (overlay.parentNode) {
                        overlay.parentNode.removeChild(overlay);
                    }
                }, 100);
            }
            return;
        }
        
        if (!overlay || !countdownEl) return;
        
        let countdown = 5;
        let remainingTime = 5000; // 5 seconds in milliseconds
        
        // Function to update countdown display
        function updateCountdown() {
            countdownEl.textContent = countdown.toString();
            countdownEl.style.animation = 'none';
            // Trigger reflow to restart animation
            void countdownEl.offsetWidth;
            countdownEl.style.animation = 'countdownPop 0.3s ease-out';
        }
        
        // Function to close the advertisement
        function closeAdvertisement() {
            overlay.classList.add('hiding');
            setTimeout(() => {
                overlay.style.display = 'none';
                // Remove from DOM after animation
                setTimeout(() => {
                    if (overlay.parentNode) {
                        overlay.parentNode.removeChild(overlay);
                    }
                }, 500);
            }, 500);
        }
        
        // Initial countdown display
        updateCountdown();
        
        // Countdown timer
        const countdownInterval = setInterval(() => {
            countdown--;
            if (countdown > 0) {
                updateCountdown();
            } else {
                clearInterval(countdownInterval);
                closeAdvertisement();
            }
        }, 1000);
        
        // Skip button functionality
        if (skipBtn) {
            skipBtn.addEventListener('click', () => {
                clearInterval(countdownInterval);
                closeAdvertisement();
            });
        }
        
        // Auto-close after exactly 5 seconds as backup
        setTimeout(() => {
            clearInterval(countdownInterval);
            if (overlay.style.display !== 'none') {
                closeAdvertisement();
            }
        }, remainingTime);
    });
</script>

